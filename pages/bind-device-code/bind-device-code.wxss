/* pages/bind-device-code/bind-device-code.wxss */
@import "../../styles/common.wxss";

/* --- 全局页面样式 (全屏化) --- */
.bind-device-page {
  background: linear-gradient(135deg, #2563eb 0%, #16a0f6 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  color: white;
}

/* --- 顶部波浪背景 --- */
.header-bg {
  height: 400rpx; /* 增加高度 */
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-shrink: 0;
}

.header-content { 
  position: relative; 
  z-index: 2; 
}

.title { 
  font-size: 56rpx; 
  font-weight: bold; 
  display: block;
  margin-bottom: 16rpx;
}

.subtitle { 
  margin-top: 16rpx; 
  opacity: 0.9; 
  font-size: 28rpx;
  display: block;
}

.wave {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 200%;
  height: 160rpx;
  background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg" fill="rgba(255,255,255,0.15)"><path d="M0 0v46.29c47.79 22.2 103.59 32.17 158 28 70.36-5.37 136.33-33.31 206.8-37.5 73.84-4.36 147.54 16.88 218.2 35.26 69.27 18 138.3 24.88 209.4 13.08 36.15-6 69.85-17.84 104.45-29.34C989.49 25 1113-14.29 1200 52.47V0z" /></svg>');
  background-size: 2000rpx 160rpx;
  animation: wave 15s cubic-bezier(0.36, 0.45, 0.63, 0.53) infinite;
}

.wave:nth-child(2) { 
  animation-delay: -5s; 
  animation-duration: 20s; 
  opacity: 0.5; 
}

@keyframes wave { 
  0% { transform: translateX(0); } 
  100% { transform: translateX(-1000rpx); } 
}
  
/* --- 内容区域 --- */
.content-wrapper {
  flex: 1; /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  padding: 0 48rpx;
}

.qr-guide { 
  text-align: center; 
  margin-bottom: 48rpx; 
}

.qr-code-wrapper {
  background: white;
  padding: 20rpx;
  border-radius: 32rpx;
  display: inline-block;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.1);
  margin-bottom: 32rpx;
}

.qr-code-img { 
  width: 280rpx; 
  height: 280rpx; 
  display: block; 
  border-radius: 16rpx; 
}

.guide-text { 
  margin-top: 32rpx; 
  font-size: 28rpx; 
  color: rgba(255,255,255,0.9); 
  line-height: 1.6; 
  display: block;
}

/* --- 按钮和表单 --- */
.action-button {
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 24rpx;
  color: #1d63ff; /* 按钮文字颜色 */
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.action-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.action-button.loading {
  background: #ccc;
  color: white;
}

.button-icon { 
  margin-right: 16rpx; 
  font-size: 36rpx; 
}

.loading-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.scan-button { 
  margin-bottom: 48rpx; 
}

.confirm-button { 
  margin-top: 32rpx; 
}

.manual-form { 
  width: 100%; 
}

/* --- 分割线 --- */
.divider {
  display: flex;
  align-items: center;
  margin: 32rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 32rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* --- 玻璃拟态输入框 --- */
.input-wrapper { 
  position: relative; 
  margin-bottom: 32rpx;
}

.input-icon { 
  position: absolute; 
  left: 32rpx; 
  top: 50%; 
  transform: translateY(-50%); 
  font-size: 32rpx; 
  color: rgba(0,0,0,0.4); 
  z-index: 2;
}

.custom-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid rgba(255,255,255,0.3);
  background-color: rgba(255,255,255,0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding-left: 96rpx;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: #1f2937;
  transition: all 0.2s;
  outline: none;
}

.custom-input:focus { 
  border-color: white; 
  background-color: rgba(255,255,255,0.3); 
}

/* --- 帮助链接 --- */
.footer-wrapper { 
  padding: 48rpx; 
  text-align: center; 
  flex-shrink: 0; 
}

.help-link { 
  color: rgba(255,255,255,0.9); 
  text-decoration: underline; 
  display: inline-flex; 
  align-items: center; 
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-height: 700px) {
  .header-bg {
    height: 300rpx;
  }
  
  .qr-code-img {
    width: 240rpx;
    height: 240rpx;
  }
}

@media (max-width: 375px) {
  .content-wrapper {
    padding: 0 32rpx;
  }
  
  .title {
    font-size: 48rpx;
  }
  
  .qr-code-img {
    width: 240rpx;
    height: 240rpx;
  }
}

