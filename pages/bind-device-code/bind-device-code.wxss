/* pages/bind-device-code/bind-device-code.wxss */
@import "../../styles/common.wxss";

/* 全局样式 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* --- 1. 头部区域 --- */
.header-bg {
  position: relative;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  padding-bottom: 140rpx; /* 给下方卡片留出悬浮空间 */
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  overflow: hidden;
  flex-shrink: 0;
}

/* 头部装饰背景 */
.bg-decoration {
  position: absolute;
  right: -40rpx;
  bottom: -40rpx;
  width: 300rpx;
  height: 300rpx;
  border: 40rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  border-right-color: transparent;
  transform: rotate(-45deg);
}

.nav-bar {
  height: 44px; /* 标准导航栏高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
}

.header-content {
  padding: 20rpx 40rpx 0;
  position: relative;
  z-index: 10;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* --- 2. 悬浮内容区 --- */
.content-body {
  flex: 1;
  padding: 0 32rpx;
  margin-top: -100rpx; /* 向上浮动，覆盖头部 */
  position: relative;
  z-index: 20;
  padding-bottom: 60rpx;
}

.card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.04);
}

/* 扫码块 */
.scan-box {
  background: rgba(43, 127, 240, 0.04);
  border: 2rpx dashed rgba(43, 127, 240, 0.2);
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.scan-box:active {
  background: rgba(43, 127, 240, 0.08);
}

.scan-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.icon-scan {
  width: 50rpx;
  height: 50rpx;
}

/* 扫描线动画 */
.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #2B7FF0;
  box-shadow: 0 0 8rpx #2B7FF0;
  animation: scanDown 2s infinite linear;
}

@keyframes scanDown {
  0% { top: 0; opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { top: 100%; opacity: 0; }
}

.scan-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2B7FF0;
  margin-bottom: 6rpx;
  display: block;
}

.scan-desc {
  font-size: 22rpx;
  color: #9CA3AF;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #F3F4F6;
}

.divider-text {
  font-size: 24rpx;
  color: #D1D5DB;
  margin: 0 24rpx;
}

/* 表单输入 */
.form-group {
  margin-bottom: 40rpx;
}

.input-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.label-opt {
  color: #9CA3AF;
  font-weight: normal;
}

.input-wrapper {
  position: relative;
  height: 100rpx;
  background: #ffffff;
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  transition: border-color 0.2s ease;
}

.input-wrapper:focus-within {
  border-color: #2B7FF0;
  box-shadow: 0 0 0 4rpx rgba(43, 127, 240, 0.1);
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #1F2937;
  background: transparent;
}

/* 模拟宽体字体 */
.font-code {
  font-family: Consolas, monospace, sans-serif; 
  letter-spacing: 2rpx;
  font-weight: 600;
}

.input-placeholder {
  color: #9CA3AF;
  font-weight: normal;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 按钮组 */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-primary {
  width: 100% !important;
  height: 100rpx;
  background: #2B7FF0;
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(43, 127, 240, 0.25);
}

.btn-primary:active {
  background: #1E64D8;
}

.btn-ghost {
  width: 100% !important;
  height: 100rpx;
  background: transparent;
  color: #9CA3AF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-ghost:active {
  background: #F9FAFB;
}

.arrow-right {
  margin-left: 8rpx;
  font-family: monospace;
}

/* 弹窗内的提示信息 */
.modal-tips {
  padding: 28rpx 32rpx;
  margin: 0 32rpx 24rpx;
  background: #F7F8FA;
  border-radius: 16rpx;
}

.modal-tips-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 16rpx;
  text-align: center;
}

.modal-tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
}

.modal-tips-item {
  display: flex;
  align-items: flex-start;
  text-align: left;
}

.modal-tips-number {
  font-size: 22rpx;
  color: #999;
  margin-right: 8rpx;
  flex-shrink: 0;
  line-height: 1.6;
}

.modal-tips-content {
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
  flex: 1;
}

/* 底部文字 */
.footer-link {
  text-align: center;
  margin-top: 40rpx;
}

.footer-link text {
  font-size: 24rpx;
  color: #2B7FF0;
  opacity: 0.8;
}

/* 客服弹窗样式 */
.contact-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.25s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-content {
  position: relative;
  width: 100%;
  background: #f5f6f7;
  border-radius: 32rpx 32rpx 0 0;
  padding: 0 32rpx 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease-out;
}

/* 弹窗顶部拖拽指示条 */
.modal-content::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 8rpx;
  background: #ddd;
  border-radius: 4rpx;
}

.modal-header {
  padding: 48rpx 0 32rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #999;
}

.modal-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 按钮样式重置 */
.btn-reset {
  padding: 0;
  margin: 0;
  background-color: #fff;
  border: none;
  text-align: left;
  line-height: normal;
  display: flex;
}
.btn-reset::after {
  border: none;
}

/* 卡片通用样式 */
.contact-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.card-hover {
  transform: scale(0.99);
  opacity: 0.9;
  transition: all 0.1s;
}

/* 主卡片 (在线客服) */
.main-contact {
  padding: 36rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

/* 背景装饰圆圈 */
.main-contact::before {
  content: '';
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  width: 140rpx;
  height: 140rpx;
  background: radial-gradient(circle, rgba(41, 121, 255, 0.08) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  pointer-events: none;
}

.contact-card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.contact-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.contact-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.live-badge {
  font-size: 20rpx;
  background: #e8edff;
  color: #2B7FF0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 14rpx;
}

.contact-desc {
  font-size: 24rpx;
  color: #999;
}

.action-icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(77, 106, 255, 0.25);
}

.blue-gradient {
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
}

/* 次级卡片 (电话) */
.sub-contact {
  padding: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sub-contact-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 6rpx;
}

.hotline-number {
  font-size: 38rpx;
  font-weight: bold;
  color: #2B7FF0;
  font-family: 'DINAlternate-Bold', sans-serif;
  letter-spacing: 1rpx;
}

.call-btn {
  background: #e8edff;
  color: #2B7FF0;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.call-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.modal-close {
  margin-top: 24rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  background: #fff;
  border-radius: 24rpx;
}

.modal-close:active {
  background: #f5f5f5;
}