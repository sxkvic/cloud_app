/* pages/bind-device-code/bind-device-code.wxss */
@import "../../styles/common.wxss";

/* --- 全局页面样式 --- */
.bind-device-page {
  background: linear-gradient(135deg, #2563eb 0%, #16a0f6 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  color: white;
}

/* --- 顶部标题区域 --- */
.header-section {
  padding: 80rpx 48rpx 60rpx;
  text-align: center;
  flex-shrink: 0;
}

.title { 
  font-size: 48rpx; 
  font-weight: bold; 
  display: block;
  margin-bottom: 16rpx;
}

.subtitle { 
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* --- 内容区域 --- */
.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 48rpx;
}

/* --- 绑定卡片 --- */
.bind-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

/* --- 输入区域 --- */
.input-section {
  margin-bottom: 32rpx;
}

.input-wrapper { 
  position: relative; 
  margin-bottom: 40rpx;
}

.input-icon { 
  position: absolute; 
  left: 32rpx; 
  top: 50%; 
  transform: translateY(-50%); 
  font-size: 36rpx; 
  color: #666; 
  z-index: 2;
}

.custom-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e5e7eb;
  background-color: #f9fafb;
  border-radius: 24rpx;
  padding-left: 96rpx;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.custom-input:focus { 
  border-color: #2563eb; 
  background-color: white;
}

/* --- 提交按钮 --- */
.submit-button {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 24rpx;
  color: white;
  background: linear-gradient(90deg, #2563eb, #1cb0f6);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.3);
}

.submit-button.loading {
  background: #9ca3af;
  box-shadow: none;
}

.button-icon { 
  margin-right: 16rpx; 
  font-size: 36rpx; 
}

.loading-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* --- 帮助区域 --- */
.help-section {
  text-align: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #f3f4f6;
}

.help-text {
  color: #6b7280;
  font-size: 26rpx;
  text-decoration: underline;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .content-wrapper {
    padding: 0 32rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
  
  .bind-card {
    padding: 40rpx;
  }
}

