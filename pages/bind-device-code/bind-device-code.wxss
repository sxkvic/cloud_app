/* pages/bind-device-code/bind-device-code.wxss */
@import "../../styles/common.wxss";

/* 全局样式 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* --- 1. 头部区域 --- */
.header-bg {
  position: relative;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  padding-bottom: 140rpx; /* 给下方卡片留出悬浮空间 */
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  overflow: hidden;
  flex-shrink: 0;
}

/* 头部装饰背景 */
.bg-decoration {
  position: absolute;
  right: -40rpx;
  bottom: -40rpx;
  width: 300rpx;
  height: 300rpx;
  border: 40rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  border-right-color: transparent;
  transform: rotate(-45deg);
}

.nav-bar {
  height: 44px; /* 标准导航栏高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
}

.header-content {
  padding: 20rpx 40rpx 0;
  position: relative;
  z-index: 10;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* --- 2. 悬浮内容区 --- */
.content-body {
  flex: 1;
  padding: 0 32rpx;
  margin-top: -100rpx; /* 向上浮动，覆盖头部 */
  position: relative;
  z-index: 20;
  padding-bottom: 60rpx;
}

.card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.04);
}

/* 扫码块 */
.scan-box {
  background: rgba(43, 127, 240, 0.04);
  border: 2rpx dashed rgba(43, 127, 240, 0.2);
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.scan-box:active {
  background: rgba(43, 127, 240, 0.08);
}

.scan-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.icon-scan {
  width: 50rpx;
  height: 50rpx;
}

/* 扫描线动画 */
.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: #2B7FF0;
  box-shadow: 0 0 8rpx #2B7FF0;
  animation: scanDown 2s infinite linear;
}

@keyframes scanDown {
  0% { top: 0; opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { top: 100%; opacity: 0; }
}

.scan-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2B7FF0;
  margin-bottom: 6rpx;
  display: block;
}

.scan-desc {
  font-size: 22rpx;
  color: #9CA3AF;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #F3F4F6;
}

.divider-text {
  font-size: 24rpx;
  color: #D1D5DB;
  margin: 0 24rpx;
}

/* 表单输入 */
.form-group {
  margin-bottom: 40rpx;
}

.input-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.label-opt {
  color: #9CA3AF;
  font-weight: normal;
}

.input-wrapper {
  position: relative;
  height: 100rpx;
  background: #ffffff;
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  transition: border-color 0.2s ease;
}

.input-wrapper:focus-within {
  border-color: #2B7FF0;
  box-shadow: 0 0 0 4rpx rgba(43, 127, 240, 0.1);
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #1F2937;
  background: transparent;
}

/* 模拟宽体字体 */
.font-code {
  font-family: Consolas, monospace, sans-serif; 
  letter-spacing: 2rpx;
  font-weight: 600;
}

.input-placeholder {
  color: #9CA3AF;
  font-weight: normal;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 按钮组 */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-primary {
  width: 100% !important;
  height: 100rpx;
  background: #2B7FF0;
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(43, 127, 240, 0.25);
}

.btn-primary:active {
  background: #1E64D8;
}

.btn-ghost {
  width: 100% !important;
  height: 100rpx;
  background: transparent;
  color: #9CA3AF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-ghost:active {
  background: #F9FAFB;
}

.arrow-right {
  margin-left: 8rpx;
  font-family: monospace;
}

/* 底部文字 */
.footer-link {
  text-align: center;
  margin-top: 40rpx;
}

.footer-link text {
  font-size: 24rpx;
  color: #2B7FF0;
  opacity: 0.8;
}

/* 客服弹窗样式 */
.contact-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1D1F;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contact-btn {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #F7F9FC;
  border-radius: 16rpx;
  border: none;
  width: 100%;
  text-align: left;
  transition: all 0.2s;
}

.contact-btn:active {
  background: #E8ECF2;
  transform: scale(0.98);
}

.wechat-btn {
  background: #07C160;
  color: #fff;
}

.wechat-btn:active {
  background: #06AD56;
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.contact-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
}

.contact-number {
  font-size: 28rpx;
  color: #6B7588;
  margin-left: auto;
}

.contact-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-left: auto;
}

.wechat-btn .contact-text,
.wechat-btn .contact-desc {
  color: #fff;
}

.modal-close {
  margin-top: 32rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  color: #6B7588;
  border-top: 1rpx solid #E8ECF2;
}