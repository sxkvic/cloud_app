/* 全局容器 */
.container {
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif;
  color: #333333;
  line-height: 1.7; /* 增加行高，提升阅读体验 */
  font-size: 30rpx; /* 微信小程序标准正文字号 */
}

/* 主标题 */
.main-title {
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #000000;
  margin-top: 20rpx;
}

/* 一级标题 (一、二、三) */
.h1 {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  text-indent: 2em; /* 标题也保持缩进 */
}

/* 二级标题 (（一）、（二）) */
.h2 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 30rpx;
  margin-bottom: 16rpx;
  text-indent: 2em;
}

/* 正文段落 */
.p {
  margin-bottom: 20rpx;
  text-indent: 2em; /* 首行缩进 */
  text-align: justify; /* 两端对齐 */
  color: #4a4a4a; /* 稍微柔和的黑色 */
}

/* 列表项（无缩进或特殊缩进） */
.list-item {
  text-indent: 2em;
  margin-bottom: 10rpx;
  color: #4a4a4a;
}