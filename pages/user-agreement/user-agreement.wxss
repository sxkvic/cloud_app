/* pages/user-agreement/user-agreement.wxss */

page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 30rpx;
}

.document {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.doc-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 24rpx;
  line-height: 1.4;
  letter-spacing: 2rpx;
}

.doc-subtitle {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 8rpx;
  line-height: 1.6;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B7FF0;
  margin-bottom: 24rpx;
  line-height: 1.5;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e8f2ff;
}

.section-title.important {
  color: #ff6b6b;
  border-bottom-color: #ffe8e8;
}

.subsection-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin: 24rpx 0 16rpx 0;
  line-height: 1.5;
}

.section-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 2;
  margin-bottom: 20rpx;
  text-align: justify;
  word-break: break-all;
}

.section-content.important {
  background-color: #fff5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #ff6b6b;
}

.section-content.indent {
  padding-left: 48rpx;
  position: relative;
}

.section-content.indent::before {
  content: "•";
  position: absolute;
  left: 24rpx;
  color: #2B7FF0;
  font-weight: 600;
}

.section-content.indent-2 {
  padding-left: 72rpx;
  position: relative;
}

.section-content.indent-2::before {
  content: "◦";
  position: absolute;
  left: 48rpx;
  color: #666666;
}

.section-content.center {
  text-align: center;
  margin-top: 40rpx;
}

.bold {
  font-weight: 600;
  color: #1a1a1a;
}

.doc-footer {
  margin-top: 60rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}
