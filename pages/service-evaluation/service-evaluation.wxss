/* pages/service-evaluation/service-evaluation.wxss */

/* 页面整体样式 - 运营商风格 */
.evaluation-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0066CC 0%, #f5f7fa 280rpx);
  padding: 40rpx 32rpx;
  padding-bottom: 160rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 20rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 评分卡片容器 */
.rating-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 单个评分卡片 */
.rating-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 102, 204, 0.08);
  transition: all 0.3s ease;
}

.rating-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 204, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-icon {
  font-size: 56rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

/* 星星容器 */
.star-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.star-item {
  padding: 8rpx;
  transition: transform 0.2s ease;
}

.star-item:active {
  transform: scale(1.15);
}

.star {
  font-size: 56rpx;
  color: #e0e0e0;
  transition: all 0.3s ease;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.star.active {
  color: #FFB800;
  transform: scale(1.1);
  filter: drop-shadow(0 0 8rpx rgba(255, 184, 0, 0.4));
}

/* 评分描述 */
.rating-desc {
  text-align: center;
  font-size: 28rpx;
  color: #0066CC;
  font-weight: 500;
  min-height: 40rpx;
  line-height: 40rpx;
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid #f0f0f0;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #0066CC 0%, #0052A3 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 204, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 102, 204, 0.2);
}

.submit-btn.disabled {
  background: linear-gradient(135deg, #d0d0d0 0%, #b0b0b0 100%);
  color: #888888;
  box-shadow: none;
}
