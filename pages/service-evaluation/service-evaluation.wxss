/* pages/service-evaluation/service-evaluation.wxss */

/* 全局设定 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 140rpx;
}

/* --- 头部区域 --- */
.header-bg {
  background: linear-gradient(135deg, #4D6AFF 0%, #2B4CFF 100%);
  padding-bottom: 100rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back { 
  width: 36rpx; 
  height: 36rpx; 
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

/* 工单信息块 */
.order-info {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx 10rpx;
  color: #fff;
}

.tech-avatar {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255,255,255,0.3);
}

.avatar-img { 
  width: 64rpx; 
  height: 64rpx; 
}

.order-detail { 
  display: flex; 
  flex-direction: column; 
}

.order-type { 
  font-size: 32rpx; 
  font-weight: bold; 
  margin-bottom: 8rpx; 
}

.order-sn, .order-time { 
  font-size: 22rpx; 
  opacity: 0.8; 
  margin-bottom: 4rpx; 
}

/* --- 内容区域 --- */
.content-body {
  padding: 0 30rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

/* 评分卡片 */
.rating-card { 
  text-align: center; 
}

.card-title { 
  font-size: 36rpx; 
  font-weight: bold; 
  color: #333; 
  margin-bottom: 10rpx; 
}

.card-subtitle { 
  font-size: 24rpx; 
  color: #999; 
  margin-bottom: 40rpx; 
}

.rating-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.rating-label {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
  text-align: right;
  margin-right: 20rpx;
  font-weight: 500;
}

.star-group {
  display: flex;
  gap: 16rpx;
}

.star-wrap {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  transition: transform 0.2s ease;
}

.star-wrap:active {
  transform: scale(1.15);
}

.star-icon {
  width: 44rpx;
  height: 44rpx;
}

.score-text {
  width: 60rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #FF9500;
  font-weight: bold;
}

/* 标签卡片 */
.card-header-sm {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #F5F7FA;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag-item.tag-active {
  background: rgba(77, 106, 255, 0.1);
  color: #4D6AFF;
  border-color: #4D6AFF;
  font-weight: 500;
}

/* 输入框卡片 */
.text-card { 
  padding: 30rpx; 
}

.comment-area {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
}

.placeholder-style { 
  color: #ccc; 
}

.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #ccc;
  margin-top: 10rpx;
}

/* --- 底部按钮 --- */
.footer-btn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
  z-index: 100;
}

.submit-btn {
  background: #4D6AFF;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  width: 100% !important;
  border: none !important;
  transition: all 0.3s ease;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.submit-btn.disabled {
  background: #d0d0d0 !important;
  color: #888888 !important;
}

.submit-btn.disabled::after {
  border: none;
}
