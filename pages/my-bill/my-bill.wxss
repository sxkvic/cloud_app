/* pages/my-bill/my-bill.wxss */

/* 页面整体样式 */
.my-bill-page {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 头部信息 */
.page-header {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  color: white;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.user-info {
  margin-bottom: 24rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.account-info {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-info {
  text-align: center;
}

.balance-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.balance-amount {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
}

/* 账单统计 */
.bill-stats {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background: #e5e7eb;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.stat-value.pending {
  color: #f59e0b;
}

.stat-value.paid {
  color: #10b981;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #374151;
  text-align: center;
}

/* 账单列表 */
.bill-list {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.list-more {
  font-size: 26rpx;
  color: #2563eb;
}

.bill-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bill-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #f9fafb;
  border-left: 6rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.bill-item.pending {
  border-left-color: #f59e0b;
  background: #fffbeb;
}

.bill-item.paid {
  border-left-color: #10b981;
  background: #f0fdf4;
}

.bill-item:active {
  transform: scale(0.98);
}

.bill-info {
  flex: 1;
}

.bill-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.bill-date {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.bill-period {
  font-size: 24rpx;
  color: #9ca3af;
}

.bill-amount {
  text-align: right;
  margin-right: 16rpx;
}

.amount-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.amount-status {
  display: block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: #e5e7eb;
  color: #6b7280;
}

.bill-item.pending .amount-status {
  background: #fef3c7;
  color: #f59e0b;
}

.bill-item.paid .amount-status {
  background: #d1fae5;
  color: #10b981;
}

.bill-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f3f4f6;
  color: #374151;
}

.action-button.primary {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.action-button:active {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .my-bill-page {
    padding: 24rpx;
  }
  
  .page-header {
    padding: 32rpx 24rpx;
  }
  
  .balance-amount {
    font-size: 40rpx;
  }
}
