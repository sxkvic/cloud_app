/* pages/my-bill/my-bill.wxss */

/* 页面整体样式 */
.my-bill-page {
  background: linear-gradient(180deg, #f0f9ff 0%, #f8fafc 100%);
  min-height: 100vh;
}

/* 列表页滚动容器 */
.list-scroll-view {
  height: 100vh;
  width: 100%;
}

.list-content {
  padding: 24rpx;
  padding-bottom: 40rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.2);
}

.customer-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.customer-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.device-code {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 账单列表区域 */
.bill-list-section {
  margin-top: 8rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.bill-count {
  font-size: 24rpx;
  color: #6b7280;
}

/* 账单卡片 */
.bill-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bill-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border-left: 6rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.bill-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.bill-card.not_invoiced {
  border-left-color: #f59e0b;
  background: linear-gradient(135deg, #ffffff 0%, #fffbeb 100%);
}

.bill-card.invoiced {
  border-left-color: #10b981;
  background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.bill-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.bill-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.bill-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.bill-status.not_invoiced {
  background: #fef3c7;
  color: #f59e0b;
}

.bill-status.invoiced {
  background: #d1fae5;
  color: #10b981;
}

.bill-no {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 卡片内容 */
.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #6b7280;
}

.info-value {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.amount-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.amount-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #dc2626;
}

.view-detail {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: 500;
}

.arrow-icon {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* ========== 骨架屏样式 ========== */
.skeleton-wrapper {
  padding: 24rpx;
  min-height: 100vh;
}

/* 骨架屏动画 */
.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 头部卡片骨架屏 */
.skeleton-header-card {
  background: linear-gradient(135deg, #e8e8e8 0%, #d0d0d0 100%);
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 16rpx;
}

.skeleton-customer-name {
  width: 40%;
  height: 36rpx;
}

.skeleton-device-code {
  width: 60%;
  height: 26rpx;
}

/* 标题骨架屏 */
.skeleton-title {
  width: 30%;
  height: 32rpx;
  margin-bottom: 16rpx;
}

/* 账单卡片骨架屏 */
.skeleton-bill-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border-left: 6rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.skeleton-bill-title {
  width: 50%;
  height: 30rpx;
}

.skeleton-bill-no {
  width: 70%;
  height: 24rpx;
}

.skeleton-bill-info {
  width: 100%;
  height: 26rpx;
}

.skeleton-bill-amount {
  width: 40%;
  height: 32rpx;
  margin-top: 8rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
