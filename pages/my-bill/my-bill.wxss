/* pages/my-bill/my-bill.wxss */
@import "../../styles/common.wxss";

/* 页面整体样式 */
.my-bill-page {
  background: #f5f6f8;
  height: 100vh;
  overflow: hidden;
}

/* 自定义导航栏 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #2B7FF0;
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 导航栏占位 */
.nav-placeholder {
  width: 100%;
  background: #2B7FF0;
}

.back-btn {
  position: absolute;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  width: 36rpx;
  height: 36rpx;
}

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

/* 列表容器 */
.list-container {
  display: flex;
  flex-direction: column;
}

/* 账单滚动区域 */
.bill-scroll-view {
  flex: 1;
  width: 100%;
  min-height: 0;
}

/* 头部卡片 */
.header-card {
  background: #2B7FF0;
  padding: 40rpx 32rpx;
  margin-bottom: 0;
  flex-shrink: 0;
}

.customer-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.customer-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.device-code {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 账单列表区域 */
.bill-list-section {
  padding: 24rpx 32rpx;
}


/* 账单卡片 */
.bill-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.bill-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.bill-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 卡片头部 */
.card-header {
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.bill-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.bill-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.bill-status {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

.bill-status.invoiced {
  background: #f6ffed;
  color: #52c41a;
}

.bill-status.not_invoiced {
  background: #f5f5f5;
  color: #8c8c8c;
}

.bill-status.invoicing {
  background: #fff7e6;
  color: #fa8c16;
}

.bill-no {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 卡片底部 */
.card-footer {
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.amount-section {
  display: flex;
  align-items: baseline;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.view-detail {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #2B7FF0, #1890ff);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(43, 127, 240, 0.3);
}

.view-detail:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.detail-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}


/* 操作按钮包装器 */
.action-wrapper {
  display: flex;
  align-items: center;
}

/* 刷新开票状态按钮 */
.refresh-invoice-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #fa8c16, #ff7a00);
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
  transition: all 0.3s;
  height: auto;
  line-height: 1.5;
}

.refresh-invoice-btn::after {
  border: none;
}

.refresh-invoice-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}


/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ========== 骨架屏样式 ========== */
.skeleton-wrapper {
  min-height: 100vh;
}

/* 骨架屏动画 */
.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 头部卡片骨架屏 */
.skeleton-header-card {
  background: linear-gradient(135deg, #e8e8e8 0%, #d0d0d0 100%);
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 16rpx;
}

.skeleton-customer-name {
  width: 40%;
  height: 36rpx;
}

.skeleton-device-code {
  width: 60%;
  height: 26rpx;
}

/* 标题骨架屏 */
.skeleton-title {
  width: 30%;
  height: 32rpx;
  margin-bottom: 16rpx;
}

/* 账单卡片骨架屏 */
.skeleton-bill-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.skeleton-bill-title {
  width: 50%;
  height: 28rpx;
}

.skeleton-bill-no {
  width: 70%;
  height: 24rpx;
}

.skeleton-bill-info {
  width: 100%;
  height: 26rpx;
}

.skeleton-bill-amount {
  width: 40%;
  height: 32rpx;
  margin-top: 8rpx;
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载更多提示样式 */
.load-more-section {
  padding: 32rpx 0;
  text-align: center;
}

.loading-more,
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 26rpx;
}

.loading-text,
.no-more-text {
  color: #999;
}

.no-more-text {
  font-size: 24rpx;
}
