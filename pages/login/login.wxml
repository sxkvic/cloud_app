<!--pages/login/login.wxml-->
<view class="container">
  <!-- 1. 顶部右上角装饰光晕 -->
  <view class="top-decoration"></view>

  <!-- 2. 主体内容区 -->
  <view class="content-wrapper">
    
    <!-- A. 品牌 Logo 区域 -->
    <view class="brand-header">
      <!-- 纯CSS绘制的微缩版 Logo -->
      <view class="mini-logo">
        <view class="cloud-shape"></view>
        <view class="c-shape"></view>
      </view>
      <text class="brand-text">Chmura</text>
    </view>

    <!-- B. 欢迎语 -->
    <view class="welcome-section">
      <view class="title">
        <text>欢迎使用</text>
        <text>云网宽带服务</text>
      </view>
      <text class="subtitle">高速 · 稳定 · 智能连接您的生活</text>
    </view>

    <!-- C. 中间WiFi信号插画 (CSS绘制) -->
    <view class="illustration-section">
      <!-- WiFi信号波纹 -->
      <view class="wifi-signal">
        <!-- 外层信号波 -->
        <view class="signal-wave wave-1"></view>
        <view class="signal-wave wave-2"></view>
        <view class="signal-wave wave-3"></view>
        <!-- 中心发射点 -->
        <view class="signal-center"></view>
      </view>
    </view>

    <!-- D. 底部操作区 -->
    <view class="action-section">
      <!-- 微信登录按钮 -->
      <button 
        class="wechat-btn {{loading ? 'loading' : ''}}" 
        disabled="{{loading}}"
        open-type="getUserInfo"
        bindgetuserinfo="onGetUserInfo"
        hover-class="wechat-btn-hover"
      >
        <text>{{loading ? '授权中...' : '微信一键登录'}}</text>
      </button>

      <!-- 协议 -->
      <view class="agreement-box">
        <text class="agreement-text">登录即代表您同意 </text>
        <text class="agreement-link" bindtap="showAgreement">《用户协议》</text>
        <text class="agreement-text"> 与 </text>
        <text class="agreement-link">《隐私政策》</text>
      </view>
    </view>

  </view>
</view>

