<!--pages/login/login.wxml-->
<view class="container">
  
  <!-- 1. 背景氛围层 (顶部淡蓝极光) -->
  <view class="aurora-bg"></view>

  <!-- 2. 主体内容层 -->
  <view class="content-wrapper">
    
    <!-- A. Logo 展示区 -->
    <view class="brand-section">
      <view class="logo-holder">
        <!-- 信号波纹动画 (三层波纹) -->
        <view class="ripple delay-1"></view>
        <view class="ripple delay-2"></view>
        <view class="ripple delay-3"></view>
        
        <!-- 真实 Logo 图片 -->
        <image class="real-logo" src="/images/logo.png" mode="aspectFit"></image>
      </view>

      <!-- 文字信息 -->
      <view class="text-area">
        <text class="app-name">云宽带</text>
        <view class="slogan-container">
          <text class="slogan-text">CLOUD BROADBAND</text>
        </view>
      </view>
    </view>

    <!-- B. 底部操作区 -->
    <view class="action-section">
      <!-- 登录按钮 -->
      <button 
        class="login-btn {{loading ? 'loading-state' : ''}}" 
        disabled="{{loading}}"
        bindtap="onWeChatLogin"
        hover-class="btn-hover"
      >
        <!-- 按钮上的流光特效 -->
        <view class="btn-shine"></view>
        
        <view class="btn-content">          
          <text>{{loading ? '正在连接云端...' : '微信一键登录'}}</text>
        </view>
      </button>

      <!-- 协议链接 -->
      <view class="agreement-box">
        <text class="agreement-text">登录即代表您同意 </text>
        <text class="agreement-link" bindtap="showAgreement">《用户协议》</text>
        <text class="agreement-text"> 与 </text>
        <text class="agreement-link">《隐私政策》</text>
      </view>
    </view>

  </view>
</view>

