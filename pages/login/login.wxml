<!--pages/login/login.wxml-->
<view class="container">
  
  <!-- 1. 背景氛围层 (顶部淡蓝极光) -->
  <view class="aurora-bg"></view>

  <!-- 2. 主体内容层 -->
  <view class="content-wrapper">
    
    <!-- A. Logo 展示区 -->
    <view class="brand-section">
      <view class="logo-holder">
        <!-- 信号波纹动画 (三层波纹) -->
        <view class="ripple delay-1"></view>
        <view class="ripple delay-2"></view>
        <view class="ripple delay-3"></view>
        
        <!-- 真实 Logo 图片 -->
        <image class="real-logo" src="/images/logo.png" mode="aspectFit"></image>
      </view>

      <!-- 文字信息 -->
      <view class="text-area">
        <text class="app-name">云宽带</text>
        <view class="slogan-container">
          <text class="slogan-text">CLOUD BROADBAND</text>
        </view>
      </view>
    </view>

    <!-- B. 底部操作区 -->
    <view class="action-section">
      <!-- 隐私协议勾选 -->
      <view class="agreement-box">
        <view class="agreement-container">
          <checkbox-group bindchange="onAgreeChange">
            <label class="agreement-checkbox-label">
              <checkbox value="agree" checked="{{agreed}}" color="#2B7FF0" class="agreement-checkbox"/>
            </label>
          </checkbox-group>
          <view class="agreement-text-wrapper">
            <text class="agreement-text">我已阅读并同意</text>
            <view class="agreement-link" bindtap="navigateToUserAgreement">《用户协议》</view>
            <text class="agreement-text">和</text>
            <view class="agreement-link" bindtap="navigateToPrivacyPolicy">《隐私政策》</view>
          </view>
        </view>
      </view>

      <!-- 登录按钮 -->
      <button 
        class="login-btn {{loading ? 'loading-state' : ''}} {{!agreed ? 'disabled-state' : ''}}" 
        disabled="{{loading || !agreed}}"
        bindtap="onWeChatLogin"
        hover-class="btn-hover"
      >
        <!-- 按钮上的流光特效 -->
        <view class="btn-shine"></view>
        
        <view class="btn-content">          
          <text>{{loading ? '正在登录...' : '微信一键登录'}}</text>
        </view>
      </button>
    </view>

  </view>
</view>

