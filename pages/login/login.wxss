/* pages/login/login.wxss */
@import "../../styles/common.wxss";

/* 全局容器 */
page {
  height: 100vh;
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* --- 顶部装饰光晕 --- */
.top-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 400rpx;
  height: 400rpx;
  /* 右上角半圆形光晕 */
  background: 
    radial-gradient(ellipse at bottom left, 
      rgba(92, 211, 246, 0.3) 0%, 
      rgba(92, 211, 246, 0.15) 30%, 
      rgba(77, 106, 255, 0.1) 50%, 
      rgba(255, 255, 255, 0) 70%);
  border-radius: 0 0 0 100%;
  pointer-events: none;
  z-index: 0;
}

/* --- 内容布局 --- */
.content-wrapper {
  position: relative;
  z-index: 10;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 60rpx; /* 两侧间距 */
  box-sizing: border-box;
}

/* --- A. 品牌 Header --- */
.brand-header {
  margin-top: 120rpx; /* 避开顶部状态栏 */
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.mini-logo {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}
/* 复用之前的CSS Logo逻辑，缩小版 */
.cloud-shape {
  position: absolute;
  top: 0; right: 0;
  width: 40rpx; height: 40rpx;
  border: 6rpx solid #5CD3F6;
  border-radius: 50%;
  border-bottom-color: transparent;
  border-left-color: transparent;
  transform: rotate(-45deg);
  box-sizing: border-box;
}
.c-shape {
  position: absolute;
  bottom: 0; left: 0;
  width: 36rpx; height: 36rpx;
  border: 6rpx solid #4D6AFF;
  border-radius: 50%;
  border-right-color: transparent;
  box-sizing: border-box;
}

.brand-text {
  font-size: 40rpx;
  font-weight: 900;
  color: #1A1A1A;
  letter-spacing: 2rpx;
}

/* --- B. 欢迎语 --- */
.welcome-section {
  margin-top: 80rpx;
}

.title {
  display: flex;
  flex-direction: column;
  font-size: 56rpx;
  font-weight: bold;
  color: #1A1A1A;
  line-height: 1.3;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #9CA3AF;
  letter-spacing: 1rpx;
}

/* --- C. 中间WiFi信号插画 (CSS绘制) --- */
.illustration-section {
  flex: 1; /* 占据中间剩余空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* WiFi信号容器 */
.wifi-signal {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 信号波纹 */
.signal-wave {
  position: absolute;
  border: 4rpx solid rgba(92, 211, 246, 0.6);
  border-bottom: none;
  border-radius: 200rpx 200rpx 0 0;
  animation: signal-pulse 3s ease-in-out infinite;
}

.wave-1 {
  width: 160rpx;
  height: 80rpx;
  animation-delay: 0s;
}

.wave-2 {
  width: 120rpx;
  height: 60rpx;
  border-color: rgba(77, 106, 255, 0.7);
  animation-delay: 0.5s;
}

.wave-3 {
  width: 80rpx;
  height: 40rpx;
  border-color: rgba(92, 211, 246, 0.8);
  animation-delay: 1s;
}

/* 中心发射点 */
.signal-center {
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #5CD3F6 0%, #4D6AFF 100%);
  border-radius: 50%;
  position: relative;
  z-index: 10;
  box-shadow: 0 0 20rpx rgba(92, 211, 246, 0.6);
  animation: center-glow 2s ease-in-out infinite;
}

/* 信号波动画 */
@keyframes signal-pulse {
  0%, 100% { 
    opacity: 0.3; 
    transform: scale(0.8); 
  }
  50% { 
    opacity: 1; 
    transform: scale(1.1); 
  }
}

/* 中心点发光动画 */
@keyframes center-glow {
  0%, 100% { 
    box-shadow: 0 0 20rpx rgba(92, 211, 246, 0.6); 
  }
  50% { 
    box-shadow: 0 0 30rpx rgba(92, 211, 246, 0.9); 
  }
}


/* --- D. 底部操作区 --- */
.action-section {
  padding-bottom: 100rpx; /* 底部安全距离 */
}

.wechat-btn {
  width: 100% !important; /* 强制覆盖小程序默认样式 */
  height: 100rpx;
  background-color: #07C160;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(7, 193, 96, 0.2);
  margin: 0 0 60rpx 0; /* 增加底部间距 */
  padding: 0;
}

.wechat-btn-hover {
  background-color: #06ad56;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
  /* 让图标变白的小技巧：使用滤镜，或者直接换白色svg */
  filter: brightness(100); 
}

.agreement-box {
  text-align: center;
  font-size: 24rpx;
  line-height: 1.5;
  margin-top: 20rpx; /* 增加顶部间距 */
}

.agreement-text {
  color: #9CA3AF;
}

.agreement-link {
  color: #4D6AFF;
  font-weight: bold;
}
  