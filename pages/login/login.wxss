/* pages/login/login.wxss */
@import "../../styles/common.wxss";

/* 全局容器 */
page {
  height: 100vh;
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* --- 背景氛围 (Aurora Background) --- */
.aurora-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(43, 127, 240, 0.25) 0%, rgba(255, 255, 255, 0) 70%);
  border-radius: 50%;
  filter: blur(40rpx);
  z-index: 0;
  pointer-events: none;
}

/* --- 2. 内容布局 --- */
.content-wrapper {
  position: relative;
  z-index: 10;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 60rpx;
  padding-bottom: max(60rpx, env(safe-area-inset-bottom));
}

/* --- Logo 区域 --- */
.brand-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: -80rpx; /* 视觉中心微调上移 */
}

.logo-holder {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

/* 真实图片样式 */
.real-logo {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 5;
  /* 悬浮呼吸动画 */
  animation: float-logo 5s ease-in-out infinite;
  /* 增加轻微投影，提升立体感 */
  filter: drop-shadow(0 20rpx 30rpx rgba(43, 127, 240, 0.15));
}

/* 信号波纹 */
.ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(43, 127, 240, 0.3);
  opacity: 0;
  z-index: 0;
  animation: ripple-effect 3s linear infinite;
}

.delay-1 { animation-delay: 0s; }
.delay-2 { animation-delay: 1s; }
.delay-3 { animation-delay: 2s; }

/* 文字部分 */
.text-area {
  text-align: center;
}

.app-name {
  font-size: 64rpx;
  font-weight: 900;
  color: #1A1A1A;
  letter-spacing: -2rpx;
  display: block;
  margin-bottom: 16rpx;
}

.slogan-container {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 30rpx;
}

.slogan-text {
  font-size: 24rpx;
  color: #6B7280;
  letter-spacing: 4rpx;
  font-weight: 600;
}

/* --- 底部操作区 --- */
.action-section {
  width: 100%;
  margin-bottom: 40rpx;
  animation: slide-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.login-btn {
  position: relative;
  width: 100% !important;
  height: 110rpx;
  /* 品牌蓝渐变 */
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  border-radius: 28rpx;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 40rpx rgba(43, 127, 240, 0.25);
  overflow: hidden;
  transition: all 0.3s;
}

.btn-hover {
  transform: scale(0.98);
  box-shadow: 0 10rpx 20rpx rgba(43, 127, 240, 0.2);
}

.login-btn.loading-state {
  opacity: 0.9;
}

.btn-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

/* 按钮流光动画 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg, 
    transparent, 
    rgba(255, 255, 255, 0.25), 
    transparent
  );
  transform: skewX(-20deg);
  animation: shine-pass 3s infinite;
  z-index: 1;
}

.agreement-box {
  text-align: center;
  font-size: 24rpx;
  line-height: 1.5;
  margin-top: 20rpx; /* 增加顶部间距 */
}

.agreement-text {
  color: #9CA3AF;
}

.agreement-link {
  color: #2B7FF0;
  font-weight: bold;
}

/* --- 动画关键帧定义 --- */

/* Logo 悬浮 */
@keyframes float-logo {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

/* 信号波纹扩散 */
@keyframes ripple-effect {
  0% {
    width: 180rpx;
    height: 180rpx;
    opacity: 0.8;
    border-width: 4rpx;
  }
  100% {
    width: 400rpx;
    height: 400rpx;
    opacity: 0;
    border-width: 0rpx;
  }
}

/* 按钮流光 */
@keyframes shine-pass {
  0% { left: -100%; }
  20% { left: 200%; }
  100% { left: 200%; }
}

/* 底部滑入 */
@keyframes slide-up {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}