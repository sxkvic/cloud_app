/* pages/login/login.wxss */
@import "../../styles/common.wxss";

/* ==================== 页面整体布局 ==================== */
.login-page-wrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景元素 */
.bg-decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  animation: float 20s infinite ease-in-out;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -80rpx;
  left: -80rpx;
  animation-delay: 5s;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 50%;
  left: -50rpx;
  animation-delay: 10s;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translate(30rpx, 30rpx) scale(1.1);
    opacity: 0.5;
  }
}

/* ==================== 主容器 ==================== */
.login-container {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 640rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 头部标题区域 ==================== */
.header-section {
  text-align: center;
  margin-bottom: 100rpx;
  animation: fadeIn 1s ease-out 0.2s both;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.logo-wrapper {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
}

.logo-icon {
  font-size: 96rpx;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 25rpx 70rpx rgba(0, 0, 0, 0.3);
  }
}

.main-title {
  font-size: 80rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 20rpx;
  letter-spacing: 6rpx;
  text-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  display: block;
  background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  letter-spacing: 3rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  display: block;
}

/* ==================== 登录卡片 ==================== */
.login-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(40rpx);
  border-radius: 40rpx;
  padding: 70rpx 50rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.8s ease-out 0.3s both;
}

.card-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
  pointer-events: none;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 登录核心区域 */
.login-core {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* ==================== 微信登录按钮 ==================== */
.btn-wechat-login {
  width: 100%;
  height: 110rpx;
  background: linear-gradient(135deg, #07c160 0%, #00d976 100%);
  color: white;
  border: none;
  border-radius: 55rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 20rpx 40rpx rgba(7, 193, 96, 0.4),
    0 10rpx 20rpx rgba(7, 193, 96, 0.3),
    inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  margin-bottom: 50rpx;
  position: relative;
  overflow: hidden;
}

/* 移除微信小程序button默认的边框 */
.btn-wechat-login::after {
  border: none;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.3) 50%, 
    transparent 100%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

.btn-wechat-login:active {
  transform: scale(0.96);
  box-shadow: 
    0 10rpx 25rpx rgba(7, 193, 96, 0.3),
    0 5rpx 10rpx rgba(7, 193, 96, 0.2);
}

.btn-wechat-login.loading {
  background: linear-gradient(135deg, #9e9e9e 0%, #bdbdbd 100%);
  box-shadow: 
    0 10rpx 25rpx rgba(0, 0, 0, 0.15),
    inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  pointer-events: none;
}

.btn-wechat-login[disabled] {
  opacity: 0.8;
}

.wechat-icon {
  font-size: 44rpx;
  line-height: 1;
  animation: iconPulse 2s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.btn-text {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* ==================== 协议区域 ==================== */
.agreement-section {
  width: 100%;
  display: flex;
  justify-content: center;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  max-width: 90%;
}

.checkbox-wrapper:active {
  background-color: rgba(255, 255, 255, 0.08);
  transform: scale(0.98);
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2.5rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
}

.checkbox.checked {
  background: linear-gradient(135deg, #07c160 0%, #00d976 100%);
  border-color: #07c160;
  transform: scale(1.08) rotate(3deg);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
}

.check-icon {
  color: white;
  font-size: 22rpx;
  font-weight: bold;
  animation: checkPop 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes checkPop {
  0% {
    transform: scale(0) rotate(-45deg);
    opacity: 0;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.5;
  font-weight: 400;
  text-align: center;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
  text-decoration: none;
  border-bottom: 1.5rpx solid rgba(255, 255, 255, 0.7);
  padding-bottom: 1rpx;
  transition: all 0.3s ease;
}

.agreement-link:active {
  color: #fff;
  border-bottom-color: #fff;
}

/* ==================== 底部帮助链接 ==================== */
.footer-links {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  animation: fadeIn 1s ease-out 0.6s both;
}

.help-link {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.help-link:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

/* ==================== 响应式设计 ==================== */
@media (max-height: 700px) {
  .login-page-wrapper {
    justify-content: flex-start;
    padding-top: 100rpx;
  }
  
  .header-section {
    margin-bottom: 60rpx;
  }
  
  .logo-icon {
    font-size: 72rpx;
    width: 120rpx;
    height: 120rpx;
  }
  
  .main-title {
    font-size: 64rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .login-card {
    padding: 50rpx 40rpx;
  }
  
  .btn-wechat-login {
    height: 96rpx;
  }
}

@media (max-width: 375px) {
  .login-container {
    max-width: 100%;
  }
  
  .login-card {
    padding: 50rpx 35rpx;
  }
  
  .main-title {
    font-size: 60rpx;
  }
  
  .logo-icon {
    font-size: 64rpx;
    width: 100rpx;
    height: 100rpx;
  }
}

