/* pages/login/login.wxss */
@import "../../styles/common.wxss";

/* 页面整体布局 */
.login-page-wrapper {
  min-height: 100vh;
  background: linear-gradient(135deg, #2563eb 0%, #3b82f6 50%, #8b5cf6 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 添加装饰性背景元素 */
.login-page-wrapper::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
  z-index: 1;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 主容器 */
.login-container {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 640rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部标题区域 */
.header-section {
  text-align: center;
  margin-bottom: 120rpx;
  animation: slideDown 1s ease-out;
}

.main-title {
  font-size: 72rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  letter-spacing: 4rpx;
  text-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
  display: block;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  display: block;
}

@keyframes slideDown {
  0% { transform: translateY(-60rpx); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 1s ease-out 0.3s both;
}

@keyframes slideUp {
  0% { transform: translateY(60rpx); opacity: 0; }
  100% { transform: translateY(0); opacity: 1; }
}

/* 登录核心区域 */
.login-core {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 微信登录按钮 */
.btn-wechat-login {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #00d976 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 32rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 48rpx;
}

.btn-wechat-login:active {
  transform: translateY(2rpx);
  box-shadow: 0 12rpx 24rpx rgba(7, 193, 96, 0.2);
}

.btn-wechat-login.loading {
  background: #ccc;
  box-shadow: none;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  font-weight: bold;
}

.loading-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.btn-text {
  font-size: 32rpx;
}

/* 协议区域 */
.agreement-section {
  width: 100%;
}

.checkbox-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.check-icon {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

.agreement-link {
  color: #1d63ff;
  text-decoration: underline;
}

/* 底部帮助链接 */
.footer-links {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  animation: fadeIn 1s ease-out 1s both;
}

.help-link {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

/* 响应式设计 */
@media (max-height: 700px) {
  .login-page-wrapper {
    justify-content: flex-start;
    padding-top: 120rpx;
  }
  
  .header-section {
    margin-bottom: 80rpx;
  }
  
  .main-title {
    font-size: 56rpx;
  }
  
  .login-card {
    padding: 60rpx 48rpx;
  }
}

@media (max-width: 375px) {
  .login-container {
    max-width: 100%;
  }
  
  .login-card {
    padding: 60rpx 40rpx;
  }
  
  .main-title {
    font-size: 52rpx;
  }
}

