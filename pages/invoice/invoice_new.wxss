/* pages/invoice/invoice.wxss */

page {
  background-color: #F5F6F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  padding-bottom: 180rpx;
}

/* ========== 1. 顶部蓝色装饰背景 ========== */
.blue-header {
  height: 320rpx;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 0;
}

.container {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  margin-top: 40rpx;
}

/* ========== 2. 卡片通用样式 ========== */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

/* 信息卡片 (玻璃态效果) */
.info-card {
  background: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  color: #fff;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-item {
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 40rpx;
  font-weight: 600;
}

.right-align {
  text-align: right;
}

.device-tag {
  background: rgba(255, 255, 255, 0.25);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: inline-flex;
  align-items: center;
}

.tag-bold {
  font-weight: bold;
  margin-right: 6rpx;
}

/* ========== 3. 表单区域 ========== */
.form-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  flex: 1;
  justify-content: center;
}

.radio-item.selected {
  border-color: #2B7FF0;
  background: #f0f7ff;
}

.radio-circle {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.radio-circle.selected {
  border-color: #2B7FF0;
  background: #2B7FF0;
}

.radio-dot {
  width: 16rpx;
  height: 16rpx;
  background: white;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.radio-circle.selected .radio-dot {
  opacity: 1;
}

.radio-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

/* 输入框 */
.input-wrapper {
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #2B7FF0;
}

.weui-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.placeholder-style {
  color: #C0C4CC;
  font-size: 30rpx;
}

/* ========== 4. 提示说明 ========== */
.tips-box {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 32rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

/* ========== 5. 发票历史记录 ========== */
.invoice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.invoice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F7F8FA;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.invoice-item:active {
  background: #E5E7EB;
}

.invoice-info {
  flex: 1;
}

.invoice-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.invoice-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.invoice-no {
  font-size: 24rpx;
  color: #666;
}

.invoice-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #2B7FF0;
}

.invoice-time {
  font-size: 22rpx;
  color: #999;
}

.invoice-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

.invoice-status.completed {
  background: #D1FAE5;
  color: #059669;
}

.invoice-status.pending {
  background: #FEF3C7;
  color: #D97706;
}

/* ========== 6. 骨架屏 ========== */
.skeleton-wrapper {
  padding: 0;
}

.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.info-card-skeleton {
  background: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.skeleton-line {
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.skeleton-title {
  width: 40%;
  height: 40rpx;
}

.skeleton-desc {
  width: 70%;
  height: 32rpx;
}

.skeleton-input {
  width: 100%;
  height: 96rpx;
  margin-bottom: 24rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 7. 底部按钮 ========== */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  box-sizing: border-box;
}

/* 适配全面屏底部安全区 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-submit {
  width: 100% !important;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 0;
  margin: 0;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(43, 127, 240, 0.4);
  transition: all 0.3s;
}

.btn-submit::after {
  border: none;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.99);
}

.btn-submit[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* ========== 8. 响应式设计 ========== */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .card {
    padding: 32rpx 24rpx;
  }
}
