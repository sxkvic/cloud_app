/* pages/pre-recharge/pre-recharge.wxss */

/* 全局基础 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  padding-bottom: 180rpx; /* 防止内容被底部遮挡 */
}

.container {
  display: flex;
  flex-direction: column;
}

/* --- 头部样式 --- */
.header-bg {
  background: linear-gradient(135deg, #4D6AFF 0%, #2B4CFF 100%);
  padding-bottom: 120rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  position: relative;
  z-index: 0;
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 44px;
}

.back-btn {
  position: absolute;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  width: 36rpx;
  height: 36rpx;
}

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

.account-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 20rpx 40rpx 0;
  color: #fff;
}

.label { font-size: 24rpx; opacity: 0.8; margin-bottom: 8rpx; display: block; }
.phone { font-size: 40rpx; font-weight: bold; letter-spacing: 2rpx; }
.device { font-size: 32rpx; font-weight: 600; }

.info-right { text-align: right; }

/* 加载状态 */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20rpx 0;
}

.loading-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* --- 内容区域 --- */
.content-body {
  padding: 0 30rpx;
  margin-top: -80rpx;
  position: relative;
  z-index: 10;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 金额网格 Grid */
.grid-box {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.grid-item {
  position: relative;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  overflow: hidden;
}

/* 选中态 */
.grid-item.active {
  border-color: #4D6AFF;
  background-color: #EEF2FF;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.grid-item.active .amount { color: #4D6AFF; }

.desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}
.grid-item.active .desc { color: #4D6AFF; }

/* 推荐角标 */
.recommend-tag {
  position: absolute;
  top: 0; right: 0;
  background: #FF4D4F;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-bottom-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

/* 选中态的右下角三角和勾 */
.grid-item.active::after {
  content: '';
  position: absolute;
  bottom: 0; right: 0;
  width: 0; height: 0;
  border-style: solid;
  border-width: 0 0 40rpx 48rpx;
  border-color: transparent transparent #4D6AFF transparent;
}
.check-mark {
  position: absolute;
  bottom: 0; right: 4rpx;
  color: #fff;
  font-size: 18rpx;
  z-index: 2;
  line-height: 1;
}

/* 自定义金额 */
.custom-row {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #F5F7FA;
  display: flex;
  align-items: center;
}

.custom-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  width: 160rpx;
}

.custom-input-box {
  flex: 1;
  background: #F9FAFB;
  border-radius: 12rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.custom-input-box.active-border {
  border-color: #4D6AFF;
  background: #fff;
}

.custom-input-box .symbol {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.placeholder { font-weight: normal; color: #CCC; font-size: 28rpx; }

/* 备注行 */
.row-card {
  display: flex;
  align-items: center;
  padding: 30rpx !important;
}
.row-label { font-size: 28rpx; font-weight: bold; color: #666; width: 140rpx; }
.row-input { flex: 1; font-size: 28rpx; color: #333; }

/* 提示文案 */
.tips-box { padding: 0 10rpx; }
.tips-title { font-size: 24rpx; color: #999; margin-bottom: 12rpx; }
.tips-item { font-size: 22rpx; color: #BBB; line-height: 1.6; }

/* --- 底部栏 --- */
.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: #fff;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
  z-index: 100;
}

.footer-content {
  height: 110rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}

.price-box {
  display: flex;
  align-items: baseline;
}
.price-box .label { font-size: 24rpx; color: #666; margin-right: 8rpx; }
.price-box .price { font-size: 44rpx; color: #FF4D4F; font-weight: bold; }

.pay-btn {
  background: linear-gradient(90deg, #4D6AFF 0%, #2B4CFF 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0;
  border: none;
}
.pay-btn:active { opacity: 0.9; }
.pay-btn[disabled] {
  background: #cbd5e1;
  color: #94a3b8;
}
.pay-btn[disabled]::after {
  border: none;
}


