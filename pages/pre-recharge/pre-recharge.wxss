/* pages/pre-recharge/pre-recharge.wxss */
@import "../../styles/common.wxss";

/* 全局页面样式 */
page {
  background: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.pre-recharge-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 200rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 80rpx 0 60rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 主体内容 */
.main-content {
  padding: 0 32rpx;
}

/* 加载状态 */
.loading-section {
  margin-bottom: 32rpx;
}

.loading-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

/* 金额选择部分 */
.amount-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 32rpx;
}

.amount-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.amount-item {
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.amount-item.selected {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-color: #667eea;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(102, 126, 234, 0.3);
}

.amount-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
}

.amount-item.selected .amount-value {
  color: white;
}

.amount-label {
  font-size: 22rpx;
  color: #ef4444;
  font-weight: 600;
  margin-top: 8rpx;
  display: block;
}

.amount-item.selected .amount-label {
  color: #fbbf24;
}

/* 自定义金额 */
.custom-amount-section {
  border-top: 2rpx solid #f1f5f9;
  padding-top: 32rpx;
}

.custom-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
}

.amount-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.amount-input-wrapper:focus-within {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.currency-symbol {
  font-size: 36rpx;
  font-weight: bold;
  color: #6b7280;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  height: 88rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  background: transparent;
}

/* 支付方式部分 */
.payment-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.payment-method:active {
  transform: scale(0.98);
}

.payment-method.selected {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.payment-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

.payment-emoji {
  font-size: 28rpx;
}

.payment-info {
  flex: 1;
}

.payment-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.payment-desc {
  font-size: 24rpx;
  color: #64748b;
}

.payment-check {
  width: 48rpx;
  height: 48rpx;
  background: #e2e8f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.payment-method.selected .payment-check {
  background: #667eea;
}

.check-icon {
  color: #94a3b8;
  font-size: 24rpx;
  font-weight: bold;
  opacity: 0;
  transition: all 0.3s ease;
}

.check-icon.checked {
  color: white;
  opacity: 1;
}

/* 备注部分 */
.remark-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
}

.remark-input {
  width: 100%;
  min-height: 120rpx;
  background: #f8fafc;
  border: 3rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.remark-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

/* 底部操作按钮 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 32rpx;
  border-top: 1rpx solid rgba(226, 232, 240, 0.6);
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.recharge-summary {
  text-align: center;
  margin-bottom: 20rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #475569;
  font-weight: 600;
}

.recharge-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.recharge-btn:active:not(.disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.5);
}

.recharge-btn.disabled {
  background: #cbd5e1;
  color: #94a3b8;
  box-shadow: none;
}

.recharge-btn.loading {
  background: #94a3b8;
  box-shadow: none;
}


