/* pages/home/home.wxss */
@import "../../styles/common.wxss";
@import "../../styles/iconfont.wxss";

/* 整体页面样式 */
.home-page {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 160rpx; /* 为底部导航栏留出空间 */
}

/* 主体内容区 */
.content-body {
  padding: 0 32rpx;
}

/* 顶部账户信息区域 */
.header-section {
  padding: 32rpx;
  background: #f7f8fa;
}

.account-card {
  background: linear-gradient(135deg, #4D6AFF 0%, #2B4CFF 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(77, 106, 255, 0.25);
}

.account-info {
  flex: 1;
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  opacity: 0.9;
}

.customer-name {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  opacity: 1;
}

.balance-row {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 6rpx;
}

.balance-amount {
  font-size: 52rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2rpx;
  line-height: 1.2;
}

.recharge-btn {
  background: #fff;
  color: #4D6AFF;
  padding: 20rpx 32rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.recharge-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 轮播图区域 */
.swipe-section {
  margin: 32rpx 0;
}

.promo-swipe {
  height: 280rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.swipe-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.swipe-image {
  width: 100%;
  height: 100%;
}

.swipe-caption {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.swipe-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.swipe-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 常用服务区域 */
.common-services-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.services-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.service-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.service-card:active {
  transform: scale(0.98);
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.service-icon {
  font-size: 40rpx;
  color: white;
}

.text-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.service-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 全部功能区域 */
.all-features-section {
  margin-bottom: 48rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 24rpx 16rpx;
  transition: transform 0.2s ease;
  border-radius: 16rpx;
}

.feature-item:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.02);
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  font-size: 52rpx;
  border-radius: 50%;
  position: relative;
}

/* 浅色圆形背景 */
.feature-icon::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: currentColor;
  opacity: 0.1;
  z-index: 0;
}

/* 图标本身 */
.feature-icon .iconfont {
  position: relative;
  z-index: 1;
}

.feature-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .content-body {
    padding: 0 24rpx;
  }
  
  .services-grid {
    gap: 16rpx;
  }
  
  .service-card {
    padding: 24rpx;
  }
  
  .features-grid {
    gap: 16rpx;
    padding: 24rpx;
  }
  
  .feature-item {
    padding: 16rpx 8rpx;
  }
}

