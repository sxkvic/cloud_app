/* pages/self-renewal/self-renewal.wxss */

/* 页面整体样式 */
.self-renewal-page {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 300rpx; /* 增加底部内边距，避免被底部按钮遮挡 */
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 服务状态 */
.service-status {
  margin-bottom: 32rpx;
}

.status-card {
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 20rpx;
  padding: 32rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.service-details {
  flex: 1;
}

.service-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.service-status-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.expiry-info {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.expiry-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.expiry-date {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

/* 续费套餐 */
.renewal-packages {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.package-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.package-item {
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  padding-right: 80rpx; /* 为单选框留出空间 */
  transition: all 0.3s ease;
  position: relative;
}

.package-item.selected {
  border-color: #2563eb;
  background: #f8fafc;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.1);
}

.package-item:active {
  transform: translateY(0);
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #2563eb;
}

.package-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #6b7280;
}

.detail-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

.detail-value.bonus {
  color: #10b981;
  font-weight: 600;
}

.package-radio {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.package-radio.selected {
  border-color: #2563eb;
  background: #2563eb;
}

.radio-inner {
  width: 14rpx;
  height: 14rpx;
  background: white;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.package-radio.selected .radio-inner {
  opacity: 1;
}

/* 续费时长 */
.renewal-duration {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.duration-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.duration-item {
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  background: #f9fafb;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 120rpx;
}

.duration-item.selected {
  border-color: #2563eb;
  background: #dbeafe;
  color: #2563eb;
}

.duration-item:active {
  transform: scale(0.95);
}

.duration-text {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.duration-discount {
  font-size: 22rpx;
  color: #ef4444;
  font-weight: 500;
}

/* 支付方式 */
.payment-methods {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.method-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.method-item.selected {
  border-color: #2563eb;
  background: #f8fafc;
}

.method-item:active {
  transform: translateX(4rpx);
}

.method-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-icon {
  width: 40rpx;
  height: 40rpx;
}

.payment-emoji {
  font-size: 40rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.method-description {
  font-size: 24rpx;
  color: #6b7280;
}

.method-radio {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.method-radio.selected {
  border-color: #2563eb;
  background: #2563eb;
}

.radio-inner {
  width: 14rpx;
  height: 14rpx;
  background: white;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.method-radio.selected .radio-inner {
  opacity: 1;
}

/* 续费说明 */
.renewal-notice {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-top: 4rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  flex: 1;
}

/* 续费记录 */
.renewal-history {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.history-info {
  flex: 1;
}

.history-date {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.history-package {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.history-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #2563eb;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #e5e7eb;
}

.payment-summary {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item.total {
  border-top: 1rpx solid #e5e7eb;
  padding-top: 12rpx;
  margin-top: 8rpx;
}

.summary-label {
  font-size: 26rpx;
  color: #6b7280;
}

.summary-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.summary-value.discount {
  color: #10b981;
}

.summary-item.total .summary-value {
  font-size: 32rpx;
  color: #2563eb;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f3f4f6;
  color: #374151;
}

.action-button.primary {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.action-button:disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.action-button:active:not(:disabled) {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .self-renewal-page {
    padding: 24rpx;
  }
  
  .renewal-packages,
  .renewal-duration,
  .payment-methods,
  .renewal-notice,
  .renewal-history {
    padding: 24rpx;
  }
  
  .duration-options {
    grid-template-columns: repeat(2, 1fr);
  }
}


