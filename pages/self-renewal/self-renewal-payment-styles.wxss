/* 支付方式选择弹窗样式 */
.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.payment-content {
  width: 100%;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.payment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.payment-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background-color: #f9fafb;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.payment-item:active {
  background-color: #f3f4f6;
  transform: scale(0.98);
}

.payment-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.payment-icon .iconfont {
  font-size: 48rpx;
  color: #fff;
}

.payment-item:nth-child(1) .payment-icon {
  background: #10b981; /* 微信支付 - 绿色 */
}

.payment-item:nth-child(2) .payment-icon {
  background: #3b82f6; /* 二维码支付 - 蓝色 */
}

.payment-item:nth-child(3) .payment-icon {
  background: #1677ff; /* 支付宝支付 - 支付宝蓝 */
}

.payment-item:nth-child(4) .payment-icon {
  background: #f59e0b; /* 线下支付 - 橙色 */
}

.payment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.payment-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.payment-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.payment-arrow {
  font-size: 48rpx;
  color: #d1d5db;
  margin-left: 16rpx;
}

/* 二维码支付弹窗样式 */
.qrcode-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
  padding: 48rpx;
}

.qrcode-content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: scaleIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.qrcode-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-btn {
  font-size: 48rpx;
  color: #9ca3af;
  padding: 0 16rpx;
  line-height: 1;
  cursor: pointer;
}

.qrcode-body {
  padding: 48rpx 32rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载状态 */
.qrcode-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f4f6;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 错误状态 */
.qrcode-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.error-icon {
  font-size: 96rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ef4444;
  max-width: 400rpx;
  line-height: 1.6;
}

.retry-button {
  margin-top: 16rpx;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

.retry-button::after {
  border: none;
}

/* 二维码显示 */
.qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.qrcode-wrapper {
  width: 240rpx;
  height: 240rpx;
  padding: 20rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 32rpx;
}

.qrcode-canvas {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.qrcode-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.tips-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.qrcode-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.action-button {
  flex: 1;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-button::after {
  border: none;
}

.copy-button {
  background: #f3f4f6;
  color: #374151;
  border: 2rpx solid #e5e7eb;
}

.copy-button:active {
  background: #e5e7eb;
  transform: scale(0.98);
}
