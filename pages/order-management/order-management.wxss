/* pages/order-management/order-management.wxss */
.order-management-container {
  min-height: 100vh;
  background: #f5f6f8;
  padding-bottom: 40rpx;
}

/* ========== Tab 切换 ========== */
.tabs-container {
  background: white;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tabs {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 0;
  position: relative;
  cursor: pointer;
}

.tab-text {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #2B7FF0;
  font-weight: 600;
  font-size: 32rpx;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #2B7FF0, #1890ff);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 60rpx;
    opacity: 1;
  }
}

/* ========== 骨架屏 ========== */
.skeleton-container {
  padding: 24rpx 32rpx;
}

.skeleton-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.skeleton-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.skeleton-title {
  width: 400rpx;
  height: 32rpx;
}

.skeleton-status {
  width: 120rpx;
  height: 48rpx;
  border-radius: 24rpx;
}

.skeleton-content {
  margin-bottom: 24rpx;
}

.skeleton-text {
  width: 100%;
  height: 28rpx;
  margin-bottom: 16rpx;
}

.skeleton-text:last-child {
  width: 60%;
}

.skeleton-footer {
  display: flex;
  justify-content: flex-end;
}

.skeleton-amount {
  width: 200rpx;
  height: 40rpx;
}

/* ========== 订单列表 ========== */
.order-list {
  padding: 24rpx 32rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-no {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  flex: 1;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

.status-1 {
  background: #fff7e6;
  color: #fa8c16;
}

.status-2 {
  background: #f6ffed;
  color: #52c41a;
}

.status-3 {
  background: #f5f5f5;
  color: #8c8c8c;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

/* 订单内容 */
.order-content {
  margin-bottom: 24rpx;
}

.content-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.content-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 订单底部 */
.order-footer {
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.amount-info {
  display: flex;
  align-items: baseline;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 32rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 26rpx;
  color: #2B7FF0;
}

.no-more {
  padding: 32rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #999;
}

/* ========== 订单底部操作按钮 ========== */
.order-footer {
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-btn-group {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.repay-btn {
  background: linear-gradient(135deg, #2B7FF0, #1890ff);
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(43, 127, 240, 0.3);
}

.repay-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.repay-btn-text {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
}

/* ========== 支付方式选择弹窗 ========== */
.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.payment-content {
  width: 100%;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.payment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.payment-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background-color: #f9fafb;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.payment-item:active {
  background-color: #f3f4f6;
  transform: scale(0.98);
}

.payment-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.payment-icon .iconfont {
  font-size: 48rpx;
  color: #fff;
}

.payment-icon.wechat-icon {
  background: #10b981; /* 微信支付 - 绿色 */
}

.payment-icon.qrcode-icon {
  background: #3b82f6; /* 二维码支付 - 蓝色 */
}

.payment-icon.alipay-icon {
  background: #1677ff; /* 支付宝支付 - 支付宝蓝 */
}

.payment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.payment-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.payment-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.payment-arrow {
  font-size: 48rpx;
  color: #d1d5db;
  margin-left: 16rpx;
}

/* ========== 二维码支付弹窗 ========== */
.qrcode-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
  padding: 48rpx;
}

.qrcode-content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: scaleIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.qrcode-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-btn {
  font-size: 48rpx;
  color: #9ca3af;
  padding: 0 16rpx;
  line-height: 1;
}

.qrcode-body {
  padding: 48rpx 32rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载状态 */
.qrcode-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f4f6;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 错误状态 */
.qrcode-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.error-icon {
  font-size: 96rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ef4444;
  max-width: 400rpx;
  line-height: 1.6;
}

.retry-button {
  margin-top: 16rpx;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

.retry-button::after {
  border: none;
}

/* 二维码显示 */
.qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.qrcode-wrapper {
  width: 240rpx;
  height: 240rpx;
  padding: 20rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 32rpx;
}

.qrcode-canvas {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.qrcode-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.qrcode-tips .tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.qrcode-tips .tips-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.qrcode-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.action-button {
  flex: 1;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-button::after {
  border: none;
}

.copy-button {
  background: #f3f4f6;
  color: #374151;
  border: 2rpx solid #e5e7eb;
}

.copy-button:active {
  background: #e5e7eb;
  transform: scale(0.98);
}
