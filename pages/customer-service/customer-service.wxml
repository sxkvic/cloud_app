<!--pages/customer-service/customer-service.wxml-->
<view class="container">
  <!-- 顶部蓝色背景 -->
  <view class="header-bg">
    <!-- 自定义导航栏 -->
    <view style="height: {{statusBarHeight}}px;"></view>
    <view class="nav-bar">
      <view class="back-btn" bindtap="handleBack">
        <image class="icon-back" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIyNCIgaGVpZ2h0PSIyNCIgZmlsbD0ibm9uZSIgc3Ryb2tlPSIjZmZmZmZmIiBzdHJva2Utd2lkdGg9IjIiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCI+PHBhdGggZD0iTTE1IDE5bC03LTcgNy03Ii8+PC9zdmc+" mode="aspectFit"></image>
      </view>
      <text class="nav-title">客户服务</text>
    </view>

    <!-- 头部欢迎语 -->
    <view class="header-text">
      <view class="h1">您好，欢迎咨询</view>
      <view class="p">中国移动智慧客服为您服务</view>
    </view>
  </view>

  <view class="content-wrapper">

    <!-- 核心功能区 -->
    <view class="service-group">
      
      <!-- 1. 在线客服 (原生客服按钮) -->
      <!-- 注意：open-type="contact" 是小程序调起客服会话的关键 -->
      <button class="card main-card btn-reset" open-type="contact" hover-class="card-hover">
        <view class="card-left">
          <view class="card-title-row">
            <text class="card-title">在线客服</text>
            <view class="live-badge">当前在线</view>
          </view>
          <text class="card-desc">7x24小时 智能+人工服务</text>
        </view>
        <!-- 右侧图标容器 -->
        <view class="action-icon-box blue-gradient">
          <image class="icon-img" src="data:image/svg+xml;base64," mode="aspectFit"></image>
        </view>
      </button>

      <!-- 2. 电话热线 -->
      <view class="card sub-card" hover-class="card-hover" bindtap="handleCall">
        <view class="card-left">
          <text class="sub-card-label">宽带专线热线</text>
          <text class="hotline-number">10086-8-1</text>
        </view>
        <view class="call-btn">
          <image class="small-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
          <text>呼叫</text>
        </view>
      </view>
    </view>

    <!-- 常见问题列表 -->
    <view class="section-title">常见问题</view>
    <view class="faq-list">
      <block wx:for="{{faqList}}" wx:key="id">
        <view class="faq-item" bindtap="onFaqTap" data-index="{{index}}">
          <text class="faq-text">{{item.title}}</text>
          <view class="arrow-right"></view>
        </view>
      </block>
    </view>

    <!-- 底部版权 -->
    <view class="footer">
      <text class="footer-brand">CHINA MOBILE</text>
      <text class="footer-slogan">全心全意为您服务</text>
    </view>

  </view>
</view>