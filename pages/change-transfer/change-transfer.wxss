/* pages/change-transfer/change-transfer.wxss */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 160rpx;
}

/* ========== 1. 沉浸式头部 ========== */
.header-bg {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  padding: 0 32rpx 40rpx;
  position: relative;
}

.nav-bar {
  display: flex;
  align-items: center;
  position: relative;
  color: #fff;
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  z-index: 10;
}

.icon-back {
  width: 24rpx;
  height: 24rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
}

/* 账户信息卡片 */
.account-info {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
}

.info-left,
.info-right {
  flex: 1;
}

.info-left .label,
.info-right .label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.info-left .name,
.info-right .device {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.info-right {
  text-align: right;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.loading-icon {
  font-size: 32rpx;
  animation: rotate 1.5s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ========== 2. 内容区域 ========== */
.content-body {
  margin-top: -20rpx;
  padding: 0 32rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 32rpx;
}

/* 表单区域 */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.form-input:focus {
  background: #fff;
  border-color: #2563eb;
}

/* 提示说明 */
.tips-box {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

/* ========== 3. 骨架屏 ========== */
.skeleton-wrapper {
  padding: 0;
}

.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.skeleton-line {
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.skeleton-title {
  width: 40%;
  height: 40rpx;
}

.skeleton-desc {
  width: 100%;
  height: 88rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 4. 底部操作栏 ========== */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.footer-content {
  display: flex;
  align-items: center;
}

.submit-btn {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  transition: all 0.3s;
}

.submit-btn:active:not([disabled]) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}

/* ========== 5. 响应式设计 ========== */
@media (max-width: 375px) {
  .content-body {
    padding: 0 24rpx;
  }
  
  .card,
  .tips-box {
    padding: 24rpx;
  }
}
