/* pages/bill-detail/bill-detail.wxss */

.bill-detail-page {
  height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f8fafc 100%);
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.detail-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.status-badge.invoiced {
  background: rgba(16, 185, 129, 0.2);
}

.status-badge.not_invoiced {
  background: rgba(245, 158, 11, 0.2);
}

.status-icon {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.status-text {
  font-size: 26rpx;
  font-weight: 600;
  color: white;
}

.amount-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.amount-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.amount-value {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
}

.bill-no-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.title-indicator {
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #3b82f6, #2563eb);
  border-radius: 3rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.info-label {
  font-size: 26rpx;
  color: #6b7280;
  flex-shrink: 0;
  min-width: 140rpx;
}

.info-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
  text-align: right;
  word-break: break-all;
  flex: 1;
}

/* 费用列表 */
.fee-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.fee-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fee-label {
  font-size: 26rpx;
  color: #6b7280;
}

.fee-value {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
}

.fee-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e5e7eb 20%, #e5e7eb 80%, transparent);
  margin: 8rpx 0;
}

.fee-row.total {
  padding-top: 8rpx;
}

.fee-row.total .fee-label {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: bold;
}

.fee-value.total {
  font-size: 36rpx;
  color: #dc2626;
  font-weight: bold;
}

/* 底部操作 */
.bottom-action {
  flex-shrink: 0;
  padding: 24rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.pay-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.pay-button:active {
  transform: scale(0.98);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}
