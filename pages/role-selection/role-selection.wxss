/* pages/role-selection/role-selection.wxss */
@import "../../styles/common.wxss";

/* 页面整体背景和布局 (全屏化) */
.selection-page-wrapper {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0; 
  left: 0;
  overflow: hidden;
  background: linear-gradient(135deg, #2563eb 0%, #8b5cf6 100%);
  color: white;
  display: flex;
  flex-direction: column;
  padding: 80rpx 48rpx;
}

/* 顶部 Logo 和标题 */
.header-section {
  text-align: center;
  padding-top: 40rpx;
  flex-shrink: 0; /* 防止被压缩 */
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto 32rpx;
  animation: bounce 1s ease-out;
}

.logo-icon {
  font-size: 56rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  animation: slideDown 1s ease-out 0.3s both;
}

/* 核心内容区 */
.main-content {
  flex: 1; /* 占据剩余所有空间 */
  display: flex;
  flex-direction: column;
  justify-content: center; /* 垂直居中 */
  align-items: center;
  width: 100%;
}

/* 滑动切换器 (玻璃拟态) */
.role-tabs {
  display: flex;
  background-color: rgba(255,255,255,0.15);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255,255,255,0.2);
  border-radius: 24rpx;
  padding: 10rpx;
  position: relative;
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 80rpx;
}

.tab-item {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-weight: 500;
  color: rgba(255,255,255,0.8);
  cursor: pointer;
  position: relative;
  z-index: 2;
  transition: color 0.4s ease;
  font-size: 32rpx;
}

/* 激活状态样式 - 用户选中时 */
.role-tabs.user .tab-item:nth-child(1) {
  color: #1a365d !important;
  font-weight: 600 !important;
}

/* 激活状态样式 - 师傅选中时 */
.role-tabs.worker .tab-item:nth-child(2) {
  color: #1a365d !important;
  font-weight: 600 !important;
}

.tab-glider {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  height: calc(100% - 20rpx);
  width: calc(50% - 10rpx);
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.role-tabs.worker .tab-glider {
  transform: translateX(100%);
}

/* 角色内容 */
.role-content-wrapper {
  height: 240rpx; /* 固定高度防止切换时抖动 */
  display: flex;
  align-items: center;
  margin-bottom: 80rpx;
  width: 100%;
}

.role-content { 
  text-align: center; 
  width: 100%;
  animation: fadeIn 0.5s ease-out;
}

.role-title { 
  font-size: 56rpx; 
  font-weight: bold; 
  margin-bottom: 24rpx;
  display: block;
}

.role-description { 
  color: rgba(255,255,255,0.8); 
  line-height: 1.6;
  font-size: 28rpx;
  display: block;
}

/* 动画效果 */
@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(20rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* 按钮和协议 */
.btn-select {
  display: block; 
  width: 100%; 
  max-width: 640rpx; 
  padding: 30rpx; 
  border-radius: 24rpx;
  font-size: 32rpx; 
  font-weight: 600; 
  text-align: center;
  transition: all 0.3s ease;
  border: none; 
  cursor: pointer;
  background-color: white;
  color: #1d63ff; /* 按钮文字颜色 */
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
  animation: slideUp 1s ease-out 0.6s both;
}

.btn-select:active:not(.loading) { 
  transform: translateY(-6rpx) scale(1.02); 
}

.btn-select.loading { 
  opacity: 0.7; 
  cursor: not-allowed; 
}

.loading-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.footer-section {
  flex-shrink: 0; /* 防止被压缩 */
  padding-bottom: 40rpx;
  animation: fadeIn 1s ease-out 1s both;
}

.agreement-text { 
  text-align: center; 
  color: rgba(255,255,255,0.7); 
  font-size: 26rpx;
  display: block;
}

.agreement-link { 
  color: white; 
  text-decoration: underline; 
  font-weight: 500;
}

/* 响应式设计 */
@media (max-height: 700px) {
  .selection-page-wrapper {
    padding: 40rpx 32rpx;
  }
  
  .main-title {
    font-size: 40rpx;
  }
  
  .role-content-wrapper {
    height: 200rpx;
    margin-bottom: 60rpx;
  }
  
  .role-title {
    font-size: 48rpx;
  }
}

@media (max-width: 375px) {
  .main-title {
    font-size: 44rpx;
  }
  
  .logo {
    width: 100rpx;
    height: 100rpx;
  }
  
  .logo-icon {
    font-size: 48rpx;
  }
}

