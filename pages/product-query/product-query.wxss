/* pages/product-query/product-query.wxss */

/* --- 全局页面样式 --- */
.product-query-page {
  background-color: #f4f7f9;
  min-height: 100vh;
  width: 100vw;
}

/* --- 主内容区 --- */
.main-content {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 80rpx 32rpx;
  min-height: calc(100vh - 88rpx);
}

/* --- 查询卡片 --- */
.query-card {
  width: 100%;
  max-width: 800rpx;
  background-color: white;
  border-radius: 40rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.07);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  text-align: center;
  margin-bottom: 56rpx;
}

/* --- 表单 --- */
.query-form {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* --- 自定义输入框样式 --- */
.input-wrapper {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  z-index: 1;
}

.custom-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding-left: 96rpx;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: #1f2937;
  transition: border-color 0.2s;
  box-sizing: border-box;
}

.custom-input:focus {
  border-color: #3b82f6;
}

/* --- 查询按钮 --- */
.button-wrapper {
  margin-top: 20rpx;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #2563eb, #1cb0f6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.submit-button:disabled {
  opacity: 0.7;
  transform: none;
}

.submit-button:active:not(:disabled) {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
}

.button-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.loading-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* --- 帮助链接 --- */
.help-link-wrapper {
  margin-top: 40rpx;
  text-align: center;
}

.help-link {
  font-size: 28rpx;
  color: #2563eb;
  display: inline-flex;
  align-items: center;
}

.help-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}
