/* pages/product-query/product-query.wxss */

/* --- 全局页面样式 --- */
.product-query-page {
  background-color: #f4f7f9;
  min-height: 100vh;
  width: 100vw;
}

/* --- 主内容区 --- */
.main-content {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 80rpx 32rpx;
  min-height: calc(100vh - 88rpx);
}

/* --- 查询卡片 --- */
.query-card {
  width: 100%;
  max-width: 800rpx;
  background-color: white;
  border-radius: 40rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.07);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  text-align: center;
  margin-bottom: 56rpx;
}

/* --- 表单 --- */
.query-form {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* --- 自定义输入框样式 --- */
.input-wrapper {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  z-index: 1;
}

.custom-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding-left: 96rpx;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: #1f2937;
  transition: border-color 0.2s;
  box-sizing: border-box;
}

.custom-input:focus {
  border-color: #3b82f6;
}

/* --- 查询按钮 --- */
.button-wrapper {
  margin-top: 20rpx;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #2563eb, #1cb0f6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.submit-button:disabled {
  opacity: 0.7;
  transform: none;
}

.submit-button:disabled::after {
  border: none;
}

.submit-button:active:not(:disabled) {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
}


.loading-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* --- 帮助链接 --- */
.help-link-wrapper {
  margin-top: 40rpx;
  text-align: center;
}

.help-link {
  font-size: 28rpx;
  color: #2563eb;
  display: inline-flex;
  align-items: center;
}

.help-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

/* --- 查询结果区域 --- */
.result-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-top: 60rpx;
}

/* --- 结果头部 --- */
.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 32rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-content .result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.header-content .result-subtitle {
  font-size: 24rpx;
  color: #6b7280;
}

.new-query-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  color: white;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(79, 70, 229, 0.3);
}

/* --- 设备列表 --- */
.devices-list {
  padding: 0 32rpx;
}

.device-card {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* --- 设备头部 --- */
.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #f8fafc, #e2e8f0);
  border-bottom: 2rpx solid #f1f5f9;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.device-status {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #dcfce7;
}

.device-status[data-status="2"] {
  background: #dcfce7; /* 运行中 - 绿色 */
}

.device-status[data-status="1"] {
  background: #fef3c7; /* 待分配 - 黄色 */
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #16a34a;
  margin-right: 8rpx;
}

.device-status[data-status="1"] .status-dot {
  background: #f59e0b; /* 待分配 - 橙色点 */
}

.status-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #16a34a; /* 运行中 - 绿色文字 */
}

.device-status[data-status="1"] .status-text {
  color: #f59e0b; /* 待分配 - 橙色文字 */
}

/* --- 设备详情 --- */
.device-details {
  padding: 32rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  min-width: 160rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  flex: 1;
}

.detail-value.amount {
  color: #dc2626;
  font-size: 32rpx;
  font-weight: bold;
}


/* --- 运营商品牌色彩 --- */
.telecom-style {
  --primary-color: #1890ff;
  --secondary-color: #722ed1;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
}
