/* pages/product-query/product-query.wxss */

/* 全局基础 */
page {
  background-color: #F0F2F5;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  padding-bottom: 40rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部 Header --- */
.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(180deg, #2B75F6 0%, #F0F2F5 100%);
  padding: 0 32rpx 32rpx;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.icon-back { width: 36rpx; height: 36rpx; }

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
}
.nav-placeholder { width: 60rpx; }

/* 搜索框 */
.search-wrapper {
  padding: 0 4rpx;
}
.search-box {
  background: #fff;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.1);
}
.icon-search { width: 40rpx; height: 40rpx; }
.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}
.placeholder { color: #9CA3AF; }
.divider {
  width: 2rpx;
  height: 32rpx;
  background: #E5E7EB;
  margin: 0 16rpx;
}
.search-btn {
  font-size: 28rpx;
  color: #2B75F6;
  font-weight: bold;
  padding: 0 8rpx;
}

.loading-icon {
  font-size: 28rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* --- 2. 统计条 --- */
.stats-bar {
  padding: 16rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.stats-text {
  font-size: 24rpx;
  color: #6B7280;
}
.tag-update {
  font-size: 20rpx;
  color: #9CA3AF;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

/* --- 3. 列表与卡片 --- */
.list-container {
  padding: 0 32rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
  overflow: hidden;
  margin-bottom: 24rpx;
  position: relative;
}

/* 顶部状态条 */
.status-stripe {
  height: 6rpx;
  width: 100%;
}
.bg-orange { background: #FB923C; }
.bg-green { background: #22C55E; }

.card-body {
  padding: 32rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}
.device-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #1F2937;
}
.status-tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
.tag-pending { background: #FFF7E6; color: #FA8C16; border: 1rpx solid #FFD591; }
.tag-using { background: #F6FFED; color: #52C41A; border: 1rpx solid #B7EB8F; }

.device-model {
  font-size: 24rpx;
  color: #9CA3AF;
}

.price-box {
  display: flex;
  align-items: baseline;
}
.currency { font-size: 22rpx; color: #9CA3AF; margin-right: 2rpx; }
.amount { font-size: 36rpx; font-weight: bold; color: #EF4444; }

/* 核心数据区 */
.core-data-box {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
}

.grid-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
}
.col-span-2 { grid-column: span 2; }

.label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 8rpx;
}

.value { font-size: 28rpx; color: #374151; font-weight: 500; }
.value-mono { font-size: 28rpx; color: #374151; font-family: monospace; font-weight: 500; }
.text-red { color: #EF4444; }

/* SN 行 */
.sn-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.copy-btn {
  display: flex;
  align-items: center;
  background: #EFF6FF;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.copy-btn:active { background: #DBEAFE; }
.copy-btn text { font-size: 22rpx; color: #3B82F6; font-weight: 500; }
.icon-copy { width: 24rpx; height: 24rpx; margin-right: 4rpx; }

/* 备注 */
.remark-box {
  font-size: 26rpx;
  color: #4B5563;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #E5E7EB;
  line-height: 1.6;
}

/* 额外信息区域 */
.extra-info {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #E5E7EB;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
}

.help-link {
  font-size: 26rpx;
  color: #2B75F6;
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #EFF6FF;
  border-radius: 20rpx;
}

.help-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}
