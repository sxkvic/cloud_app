/* pages/product-query/product-query.wxss */

/* 全局基础 */
page {
  background-color: #F0F2F5;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  padding-bottom: 40rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部 Header --- */
.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  padding: 0 0 32rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 16rpx;
}

.back-btn {
  position: absolute;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  width: 36rpx;
  height: 36rpx;
}

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

.nav-placeholder {
  display: none;
}

/* 搜索表单卡片 */
.search-card {
  margin: 0 32rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}

.label-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.form-input {
  height: 72rpx;
  background: #F3F4F6;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-divider {
  width: 2rpx;
  background: linear-gradient(180deg, transparent 0%, #E5E7EB 20%, #E5E7EB 80%, transparent 100%);
  margin: 0 8rpx;
}

.placeholder {
  color: #9CA3AF;
}

/* 查询按钮 */
.query-btn {
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(43, 127, 240, 0.35);
}

.query-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.loading-icon {
  font-size: 32rpx;
  animation: spin 1s linear infinite;
}

/* 历史记录区域 */
.history-section {
  margin: 24rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  background: #F9FAFB;
  border-bottom: 1rpx solid #E5E7EB;
}

.history-title {
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
}

.history-clear {
  font-size: 24rpx;
  color: #EF4444;
  padding: 8rpx 16rpx;
}

.history-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #F0F7FF;
}

.history-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.history-name {
  font-size: 30rpx;
  color: #1F2937;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.history-info {
  font-size: 24rpx;
  color: #6B7280;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.history-time {
  font-size: 22rpx;
  color: #9CA3AF;
}

.history-arrow {
  font-size: 32rpx;
  color: #9CA3AF;
  margin-left: 12rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* --- 2. 统计条 --- */
.stats-bar {
  padding: 16rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.stats-text {
  font-size: 24rpx;
  color: #6B7280;
}
.tag-update {
  font-size: 20rpx;
  color: #9CA3AF;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

/* --- 3. 列表与卡片 --- */
.list-container {
  padding: 0 32rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
  overflow: hidden;
  margin-bottom: 24rpx;
  position: relative;
}

/* 顶部状态条 */
.status-stripe {
  height: 6rpx;
  width: 100%;
}
.bg-orange { background: #FB923C; }
.bg-green { background: #22C55E; }

.card-body {
  padding: 32rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}
.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}
.device-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #1F2937;
}
.status-tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}
.tag-pending { background: #FFF7E6; color: #FA8C16; border: 1rpx solid #FFD591; }
.tag-using { background: #F6FFED; color: #52C41A; border: 1rpx solid #B7EB8F; }

.device-model {
  font-size: 24rpx;
  color: #9CA3AF;
}

.price-box {
  display: flex;
  align-items: baseline;
}
.currency { font-size: 22rpx; color: #9CA3AF; margin-right: 2rpx; }
.amount { font-size: 36rpx; font-weight: bold; color: #EF4444; }

/* 余额标签 */
.balance-label {
  font-size: 20rpx;
  color: #9CA3AF;
  text-align: right;
  margin-top: 4rpx;
}

/* 核心数据区 */
.core-data-box {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
}

.grid-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
}
.col-span-2 { grid-column: span 2; }

.label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 8rpx;
}

.value { font-size: 28rpx; color: #374151; font-weight: 500; }
.value-mono { font-size: 28rpx; color: #374151; font-family: monospace; font-weight: 500; }
.text-red { color: #EF4444; }
.text-warning { color: #FA8C16; }
.highlight-blue { color: #2B7FF0; font-weight: 600; }
.highlight-green { color: #22C55E; font-weight: 600; }

/* 小标题 */
.section-title-small {
  font-size: 26rpx;
  font-weight: 600;
  color: #6B7280;
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

/* SN 行 */
.sn-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.copy-btn {
  display: flex;
  align-items: center;
  background: #e8edff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.copy-btn:active {
  background: #d4dcff;
}

.copy-btn text {
  font-size: 22rpx;
  color: #2B7FF0;
  font-weight: 500;
}

.icon-copy {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

/* 备注 */
.remark-box {
  font-size: 26rpx;
  color: #4B5563;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #E5E7EB;
  line-height: 1.6;
}

/* 套餐信息区 */
.package-info-box {
  background: linear-gradient(135deg, #f0f7ff 0%, #e8f4fd 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  border-left: 6rpx solid #2B7FF0;
}

/* 账户信息区 */
.account-info-box {
  background: linear-gradient(135deg, #f0fff4 0%, #e6ffed 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  border-left: 6rpx solid #22C55E;
}

/* 额外信息区域 */
.extra-info {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #E5E7EB;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
}

.help-link {
  font-size: 26rpx;
  color: #2B7FF0;
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #e8edff;
  border-radius: 20rpx;
}

.help-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* ========== 骨架屏样式 ========== */
.skeleton-wrapper {
  padding: 0;
}

/* 骨架屏动画 */
.skeleton-line {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 统计条骨架屏 */
.skeleton-stats-bar {
  background: white;
  padding: 24rpx 32rpx;
  margin: 24rpx 32rpx 16rpx;
  border-radius: 16rpx;
}

.skeleton-stats-text {
  width: 40%;
  height: 28rpx;
}

/* 设备卡片骨架屏 */
.skeleton-card {
  opacity: 0.6;
}

.bg-skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-device-name {
  width: 50%;
  height: 32rpx;
}

.skeleton-price {
  width: 80rpx;
  height: 36rpx;
}

.skeleton-sn {
  width: 100%;
  height: 28rpx;
  margin-bottom: 16rpx;
}

.skeleton-spec {
  width: 60%;
  height: 26rpx;
  margin-bottom: 12rpx;
}

.skeleton-time {
  width: 70%;
  height: 26rpx;
}
