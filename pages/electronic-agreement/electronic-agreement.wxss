/* pages/electronic-agreement/electronic-agreement.wxss */

/* 通用样式 - 模拟纸质文档 */
page {
  font-family: "SimSun", "Songti SC", "Microsoft YaHei", serif;
  font-size: 22rpx;
  line-height: 1.5;
  color: #000;
  background-color: #525659;
}

.container {
  max-width: 700rpx;
  margin: 0 auto;
  background-color: #fff;
  padding: 60rpx 70rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  box-sizing: border-box;
  min-height: 2000rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 800rpx;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 40rpx;
}

/* 顶部服务热线 */
.service-line {
  font-size: 18rpx;
  margin-bottom: 8rpx;
  color: #666;
}

/* 顶部横线 */
.header-line {
  border-top: 3rpx solid #000;
  margin-bottom: 8rpx;
}

/* 头部元信息 */
.header-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  margin-bottom: 8rpx;
  font-family: "SimHei", sans-serif;
  flex-wrap: wrap;
  line-height: 1.5;
}

.header-meta text {
  margin-bottom: 3rpx;
}

/* 页面标题 */
.page-title {
  text-align: center;
  font-size: 40rpx;
  font-family: "SimHei", sans-serif;
  margin: 25rpx 0 40rpx 0;
  letter-spacing: 20rpx;
  font-weight: bold;
}

/* 信息字段布局 */
.info-block {
  margin-bottom: 15rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  gap: 15rpx;
}

.field {
  display: flex;
  align-items: flex-start;
}

.label {
  font-weight: bold;
  font-family: "SimHei", sans-serif;
  white-space: nowrap;
  flex-shrink: 0;
  font-size: 22rpx;
}

.value {
  font-family: "SimSun", serif;
  border-bottom: 1rpx solid #000;
  padding: 0 8rpx 2rpx 8rpx;
  flex: 1;
  min-width: 100rpx;
  word-break: break-all;
  font-size: 22rpx;
}

/* 章节标题 */
.section-title {
  font-weight: bold;
  font-size: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 12rpx;
  font-family: "SimHei", sans-serif;
  line-height: 1.6;
}

/* 缩进块 */
.indent-block {
  margin-left: 30rpx;
  line-height: 1.7;
  text-align: justify;
}

/* 加粗文字 */
.bold {
  font-weight: bold;
}

/* 高亮文字 */
.highlight {
  font-weight: bold;
  text-decoration: underline;
}

/* 有序列表 */
.ordered-list {
  margin-top: 8rpx;
}

.list-item {
  display: flex;
  margin-bottom: 8rpx;
  line-height: 1.7;
  align-items: flex-start;
}

.list-number {
  font-weight: bold;
  margin-right: 8rpx;
  flex-shrink: 0;
  min-width: 40rpx;
}

.list-content {
  flex: 1;
  text-align: justify;
}

/* 子列表 */
.sub-list {
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
  margin-left: 25rpx;
}

.sub-item {
  margin-bottom: 5rpx;
  line-height: 1.6;
  text-align: justify;
}

.sub-note {
  font-size: 20rpx;
  margin-top: 8rpx;
  color: #333;
  line-height: 1.6;
  text-align: justify;
}

/* 分割线 */
.divider-line {
  border-top: 2rpx dashed #ccc;
  margin: 30rpx 0;
}

/* 产品详情 */
.product-detail {
  margin-top: 15rpx;
  line-height: 1.7;
  text-align: justify;
}

/* 表格样式 */
.table-container {
  width: 100%;
  margin: 20rpx 0;
  border: 2rpx solid #000;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid #000;
}

.table-row:last-child {
  border-bottom: none;
}

.table-header {
  background-color: transparent;
}

.table-header .table-cell {
  font-weight: bold;
  text-align: center;
}

.table-cell {
  flex: 1;
  padding: 10rpx;
  border-right: 2rpx solid #000;
  text-align: left;
}

.table-cell:last-child {
  border-right: none;
}

/* 备注列表 */
.remark-list {
  line-height: 1.8;
}

/* 温馨提示 */
.tips-section {
  margin-top: 30rpx;
  font-size: 20rpx;
  border-top: 2rpx solid #000;
  padding-top: 15rpx;
  line-height: 1.7;
  text-align: justify;
}

/* 红色提示 */
.red-alert {
  color: #d00;
  font-weight: bold;
  margin-top: 30rpx;
  border: 2rpx dashed #d00;
  padding: 15rpx;
  line-height: 1.7;
  text-align: justify;
}

/* 签署区 */
.signature-area {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 30rpx;
}

.sign-box {
  flex: 1;
}

.sign-line {
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #000;
  padding-bottom: 8rpx;
  min-height: 35rpx;
  font-size: 22rpx;
}

/* 手机端适配 */
@media screen and (max-width: 768rpx) {
  page {
    padding: 0;
    background-color: #fff;
    font-size: 24rpx;
  }
  
  .container {
    width: 100%;
    padding: 25rpx;
    box-shadow: none;
  }

  .page-title {
    font-size: 34rpx;
    margin: 18rpx 0 35rpx 0;
    letter-spacing: 15rpx;
  }

  .header-meta {
    flex-direction: column;
    gap: 3rpx;
    font-size: 20rpx;
  }
  
  .row {
    flex-direction: column;
    margin-bottom: 0;
    gap: 0;
  }
  
  .field {
    margin-bottom: 8rpx;
    width: 100%;
  }
  
  .value {
    width: 100%;
    word-break: break-all;
  }

  .indent-block {
    margin-left: 15rpx;
  }

  .signature-area {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .sign-box {
    width: 100%;
  }

  .sub-list {
    margin-left: 15rpx;
  }

  .section-title {
    font-size: 23rpx;
    margin-top: 25rpx;
  }

  .service-line {
    font-size: 16rpx;
  }
}
