/* pages/electronic-agreement/electronic-agreement.wxss */

/* 页面整体样式 */
.electronic-agreement-page {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 协议类型 */
.agreement-types {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.type-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #2563eb;
  background: #f8fafc;
}

.type-item:active {
  transform: translateX(8rpx);
}

.type-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.type-description {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.type-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.type-status.signed {
  background: #d1fae5;
  color: #10b981;
}

.type-status.pending {
  background: #fef3c7;
  color: #f59e0b;
}

.type-status.expired {
  background: #fee2e2;
  color: #ef4444;
}

.type-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 协议内容 */
.agreement-content {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.content-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.agreement-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.agreement-version,
.agreement-date {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

/* 协议条款 */
.agreement-clauses {
  margin-bottom: 32rpx;
}

.clause-item {
  margin-bottom: 24rpx;
}

.clause-item:last-child {
  margin-bottom: 0;
}

.clause-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.clause-content {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
  padding-left: 20rpx;
  border-left: 3rpx solid #e5e7eb;
}

/* 重要提示 */
.important-notice {
  background: #fef3c7;
  border: 1rpx solid #f59e0b;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 32rpx;
}

.notice-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 12rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notice-item {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.5;
}

/* 签署操作 */
.signature-section {
  border-top: 1rpx solid #e5e7eb;
  padding-top: 24rpx;
}

.signature-info {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.signature-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.signature-item:last-child {
  margin-bottom: 0;
}

.signature-label {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
}

.signature-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 600;
}

/* 同意条款 */
.agreement-checkbox {
  margin-bottom: 24rpx;
}

.checkbox-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-top: 4rpx;
}

.checkbox.checked {
  border-color: #2563eb;
  background: #2563eb;
}

.checkbox-icon {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.checkbox-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.5;
  flex: 1;
}

/* 签署按钮 */
.signature-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f3f4f6;
  color: #374151;
}

.action-button.primary {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.action-button:disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.action-button:active:not(:disabled) {
  transform: scale(0.98);
}

/* 签署历史 */
.signature-history {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.history-info {
  flex: 1;
}

.history-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.history-date {
  font-size: 24rpx;
  color: #6b7280;
}

.history-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.history-status.signed {
  background: #d1fae5;
  color: #10b981;
}

.history-status.pending {
  background: #fef3c7;
  color: #f59e0b;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .electronic-agreement-page {
    padding: 24rpx;
  }
  
  .agreement-types,
  .agreement-content,
  .signature-history {
    padding: 24rpx;
  }
}


