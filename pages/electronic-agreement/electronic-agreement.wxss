page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  background: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 1.6;
  color: #333333;
}

/* 页面头部 */
.header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #000000;
}

.service-line {
  font-size: 22rpx;
  font-weight: normal;
  color: #333333;
  margin-bottom: 8rpx;
}

.wechat-tip {
  font-size: 22rpx;
  color: #666666;
  line-height: 1.5;
}

/* 订单信息栏 */
.order-info {
  margin-bottom: 20rpx;
  font-size: 22rpx;
}

.order-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.order-number {
  color: #333333;
  font-weight: 500;
}

.page-number {
  color: #666666;
}

.accept-date {
  color: #666666;
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 30rpx 0;
  color: #000000;
}

/* 通用section */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
}

.subsection-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
  margin: 12rpx 0 8rpx 0;
}

/* 信息行 */
.info-row {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.label {
  color: #666666;
  font-weight: 500;
  flex-shrink: 0;
}

.value {
  color: #333333;
  flex: 1;
}

.ml {
  margin-left: 40rpx;
}

/* 内容区域 */
.content {
  font-size: 24rpx;
  line-height: 1.8;
  color: #333333;
}

.text-line {
  display: block;
  margin-bottom: 12rpx;
  text-align: justify;
}

.text-indent {
  display: block;
  margin-bottom: 12rpx;
  padding-left: 40rpx;
  text-align: justify;
}

/* 产品项 */
.product-item {
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #000000;
  display: block;
  margin-bottom: 12rpx;
}

/* 费用表格 */
.fee-table {
  margin-top: 15rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.fee-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.fee-row:last-child {
  margin-bottom: 0;
}

.fee-row.total {
  padding-top: 15rpx;
  border-top: 2rpx solid #dddddd;
  font-weight: bold;
  color: #d84315;
}

.fee-label {
  color: #666666;
}

.fee-value {
  color: #333333;
  font-weight: 600;
}

.fee-row.total .fee-value {
  color: #d84315;
  font-size: 30rpx;
}

/* 签名区域 */
.signature-section {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed #cccccc;
}

.signature-row {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  flex-wrap: wrap;
}

.signature-label {
  font-size: 24rpx;
  color: #666666;
  flex-shrink: 0;
}

.signature-line {
  flex: 1;
  min-width: 200rpx;
  height: 1rpx;
  border-bottom: 1rpx solid #333333;
  margin: 0 20rpx;
}

.signature-line.long {
  min-width: 300rpx;
}

.red-section,
.red-section .content,
.red-section .text-line {
  color: #d00 !important;
  font-weight: bold;
}

/* 分页 */
.page-break {
  height: 40rpx;
  background: #f5f5f5;
  margin: 40rpx -30rpx;
}
