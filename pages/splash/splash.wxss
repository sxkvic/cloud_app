/* pages/splash/splash.wxss */
@import "../../styles/common.wxss";

/* 全局设置 */
page {
  height: 100vh;
  background-color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  transition: opacity 0.5s ease-out;
}

.container.fade-out {
  opacity: 0;
}

/* --- 1. 背景层 (极光效果) --- */
.aurora-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  /* 模拟三个径向渐变光晕 */
  background-image: 
    radial-gradient(at 0% 0%, rgba(92, 211, 246, 0.25) 0px, transparent 50%),
    radial-gradient(at 100% 0%, rgba(77, 106, 255, 0.28) 0px, transparent 50%),
    radial-gradient(at 100% 100%, rgba(92, 211, 246, 0.18) 0px, transparent 50%);
}

/* --- 2. 内容布局 --- */
.content {
  position: relative;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 上下分布 */
  align-items: center;
  padding-top: 35vh; /* Logo 距离顶部的距离 */
  padding-bottom: 120rpx; /* 底部留白 */
  box-sizing: border-box;
}

/* --- 3. Logo 区域 --- */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.logo-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 弹跳动画 */
.bounce-anim {
  animation: bounce 3s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(-5%); animation-timing-function: cubic-bezier(0.8, 0, 1, 1); }
  50% { transform: translateY(0); animation-timing-function: cubic-bezier(0, 0, 0.2, 1); }
}

/* Logo图片样式 */
.logo-image {
  width: 240rpx;
  height: 240rpx;
  /* 保持宽高比，避免拉伸 */
  object-fit: contain;
}

/* 品牌文字 Chmura */
.brand-name {
  font-size: 56rpx;
  color: #000000;
  font-weight: 600; /* 适中粗细 */
  letter-spacing: 2rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', 
               'Arial', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
  /* 使文字更现代化 */
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* --- 4. 底部 Slogan 区域 --- */
.footer-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.slogan-cn {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  letter-spacing: 6rpx;
  margin-bottom: 16rpx;
}

.slogan-en-box {
  display: flex;
  align-items: center;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.line {
  width: 60rpx;
  height: 2rpx;
  background-color: #9CA3AF;
}

.slogan-en {
  font-size: 20rpx;
  color: #374151;
  margin: 0 16rpx;
  letter-spacing: 4rpx;
  font-weight: 600;
  text-transform: uppercase; /* 强制大写 */
}

/* 加载文字样式 */
.loading-text {
  font-size: 28rpx;
  color: #6B7280;
  margin-top: 16rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
  opacity: 0.8;
}

