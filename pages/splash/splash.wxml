<!--pages/splash/splash.wxml-->
<!-- 容器 -->
<view class="container {{fadeOut ? 'fade-out' : ''}}">
  
  <!-- 背景层：极光光晕 -->
  <view class="aurora-bg"></view>

  <!-- 内容层 -->
  <view class="content">
    
    <!-- 中间 Logo 区域 -->
    <view class="logo-section">
      <!-- Logo 图片 -->
      <view class="logo-wrapper">
        <image src="/images/logo.png"  class="logo-image" mode="aspectFit" />
      </view>
    </view>

    <!-- 底部 Slogan 区域 -->
    <view class="footer-section">
      <text class="slogan-cn">云网宽带</text>
      
      <view class="slogan-en-box">
        <view class="line"></view>
        <text class="slogan-en">CONNECT FUTURE</text>
        <view class="line"></view>
      </view>
      
      <!-- 加载状态显示 -->
      <text class="loading-text">{{loadingText}}</text>
    </view>

  </view>
</view>

