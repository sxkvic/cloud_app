/* pages/business-application/business-application.wxss */

page {
  background-color: #F5F6F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  padding-bottom: 180rpx;
}

/* ========== 1. 顶部蓝色装饰背景 ========== */
.blue-header {
  height: 320rpx;
  background: #2B7FF0;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 0;
}

.container {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  margin-top: 40rpx;
}

/* ========== 2. 卡片通用样式 ========== */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

/* 客户类型切换 */
.type-card {
  padding: 20rpx;
}

.type-switch {
  display: flex;
  background: #F0F2F5;
  border-radius: 16rpx;
  padding: 8rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.type-item.active {
  background: #fff;
  color: #2B7FF0;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* ========== 3. 表单区域 ========== */
.form-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #2B7FF0;
}

.weui-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.placeholder-style {
  color: #C0C4CC;
  font-size: 30rpx;
}

/* Picker 包装器 */
.picker-wrapper {
  justify-content: space-between;
}

.picker-value {
  flex: 1;
  color: #333;
  font-size: 32rpx;
}

.picker-wrapper .placeholder-style {
  flex: 1;
  color: #C0C4CC;
  font-size: 30rpx;
}

/* 纯CSS绘制右箭头 */
.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
  flex-shrink: 0;
}

/* 多行文本框 */
.textarea-wrapper {
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.textarea-wrapper:focus-within {
  background: #fff;
  border-color: #2B7FF0;
}

.weui-textarea {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* ========== 4. 注意事项 ========== */
.notes-section {
  padding: 0 20rpx;
}

.notes-header {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.icon-info {
  width: 32rpx;
  height: 32rpx;
  background: #FF9800;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 32rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.notes-list {
  padding-left: 10rpx;
}

.note-item {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 24rpx;
}

.note-item::before {
  content: "•";
  position: absolute;
  left: 0;
  color: #ccc;
}

.note-item:last-child {
  margin-bottom: 0;
}

/* ========== 5. 底部按钮 ========== */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  box-sizing: border-box;
}

/* 适配全面屏底部安全区 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-submit {
  width: 100% !important;
  height: 96rpx;
  line-height: 96rpx;
  background: #2B7FF0;
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 0;
  margin: 0;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(43, 127, 240, 0.4);
  transition: all 0.3s;
}

.btn-submit::after {
  border: none;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.99);
}

.btn-submit[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* ========== 6. 响应式设计 ========== */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .card {
    padding: 32rpx 24rpx;
  }
}
