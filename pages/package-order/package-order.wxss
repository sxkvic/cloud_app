/* pages/package-order/package-order.wxss */

/* 页面整体样式 */
.package-order-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f2f5;
}

/* ==================== 骨架屏样式 ==================== */
.skeleton-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

.skeleton-card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  overflow: hidden;
}

.skeleton-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-line {
  height: 32rpx;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-title {
  width: 60%;
  height: 40rpx;
}

.skeleton-desc {
  width: 80%;
  height: 28rpx;
}

.skeleton-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.skeleton-tag {
  width: 120rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

/* 骨架屏呼吸动画 */
@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 内容淡入动画 */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 原有样式 ==================== */

/* 可滚动内容区域 */
.content-wrapper {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

/* 套餐列表 */
.package-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

/* 套餐卡片 */
.package-card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  border: 3rpx solid transparent;
}

.package-card:active {
  transform: scale(0.98);
}

.package-card.selected {
  border-color: #3b82f6;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.25);
}

/* 热门角标 */
.popular-badge {
  position: absolute;
  right: -20rpx;
  top: 16rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 40rpx;
  transform: rotate(45deg);
  box-shadow: 0 4rpx 8rpx rgba(239, 68, 68, 0.3);
  z-index: 10;
}

/* 左侧流量图标容器 */
.data-thumb {
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  color: white;
  box-shadow: inset 0 0 20rpx rgba(255, 255, 255, 0.1);
}

/* 信号波纹背景 */
.signal-bg {
  position: absolute;
  width: 150%;
  height: 150%;
  background: repeating-radial-gradient(
    circle at 50% 120%,
    rgba(255, 255, 255, 0.05),
    rgba(255, 255, 255, 0.05) 20rpx,
    transparent 20rpx,
    transparent 40rpx
  );
  bottom: -50%;
  pointer-events: none;
}

.data-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-number {
  display: flex;
  align-items: baseline;
}

.data-num {
  font-size: 64rpx;
  font-weight: 900;
  line-height: 0.9;
  letter-spacing: -2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.data-unit {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.9;
  margin-left: 4rpx;
}

.data-type {
  margin-top: 12rpx;
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 颜色主题 - 绿色系 */
.data-thumb.theme-0 {
  background: linear-gradient(135deg, #34d399 0%, #14b8a6 100%);
}

.feature-tag.theme-0 {
  color: #059669;
  background: #d1fae5;
  border-color: #6ee7b7;
}

.buy-button.theme-0 {
  background: #d1fae5;
  color: #059669;
  border-color: #6ee7b7;
}

/* 颜色主题 - 蓝色系 */
.data-thumb.theme-1 {
  background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
}

.feature-tag.theme-1 {
  color: #2563eb;
  background: #dbeafe;
  border-color: #93c5fd;
}

.buy-button.theme-1 {
  background: #3b82f6;
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* 颜色主题 - 橙红色系 */
.data-thumb.theme-2 {
  background: linear-gradient(135deg, #fb923c 0%, #ef4444 100%);
}

.feature-tag.theme-2 {
  color: #ea580c;
  background: #fed7aa;
  border-color: #fdba74;
}

.buy-button.theme-2 {
  background: linear-gradient(135deg, #fb923c 0%, #ef4444 100%);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(251, 146, 60, 0.3);
}

/* 颜色主题 - 紫色系 */
.data-thumb.theme-3 {
  background: linear-gradient(135deg, #a855f7 0%, #6366f1 100%);
}

.feature-tag.theme-3 {
  color: #9333ea;
  background: #f3e8ff;
  border-color: #d8b4fe;
}

.buy-button.theme-3 {
  background: #f3e8ff;
  color: #9333ea;
  border-color: #d8b4fe;
}

/* 右侧信息区域 */
.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
  min-width: 0;
}

.info-top {
  flex: 1;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
  flex: 1;
  margin-right: 16rpx;
}

.package-price {
  display: flex;
  align-items: baseline;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #ef4444;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ef4444;
}

.package-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 特性标签 */
.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.feature-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid;
  white-space: nowrap;
}

/* 购买按钮 */
.buy-button-wrapper {
  display: flex;
  justify-content: flex-end;
}

.buy-button {
  font-size: 24rpx;
  font-weight: bold;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  border: 1rpx solid;
  transition: all 0.2s ease;
}

/* 订购区域 - 固定在底部但不使用fixed */
.order-section {
  flex-shrink: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid #e5e7eb;
}

/* 引导文字区域 */
.order-guide {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #3b82f6;
  animation: guidePulse 2s ease-in-out infinite;
}

@keyframes guidePulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.9;
    transform: scale(1.02);
  }
}

.guide-icon {
  font-size: 32rpx;
  animation: bounce 1.5s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.guide-text {
  font-size: 28rpx;
  color: #1e40af;
  font-weight: 500;
}

/* 订单摘要区域 */
.order-summary {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #86efac;
}

/* 摘要行 - 客户和套餐横向排列 */
.summary-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.summary-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.summary-label {
  font-size: 22rpx;
  color: #166534;
  font-weight: 500;
}

.summary-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #15803d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 分割线 */
.summary-divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #86efac 20%, #86efac 80%, transparent);
  margin: 8rpx 0;
}

/* 价格行 */
.summary-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 8rpx;
}

.price-label {
  font-size: 24rpx;
  color: #166534;
  font-weight: 500;
}

.price-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #dc2626;
}

/* 订购按钮 */
.order-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 96rpx;
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  position: relative;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

.order-button::after {
  border: none;
}

.order-button::before {
  display: none;
}

.order-button.active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
}

.order-button.disabled {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #9ca3af;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx dashed #d1d5db;
}

.order-button.disabled::after {
  border: none;
}

.order-button:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  animation: iconRotate 2s ease-in-out infinite;
}

@keyframes iconRotate {
  0%, 100% {
    transform: rotate(0deg) scale(1);
  }
  25% {
    transform: rotate(-10deg) scale(1.1);
  }
  75% {
    transform: rotate(10deg) scale(1.1);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .data-thumb {
    width: 160rpx;
    height: 160rpx;
  }
  
  .data-num {
    font-size: 52rpx;
  }
  
  .package-name {
    font-size: 28rpx;
  }
}
