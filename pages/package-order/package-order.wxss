/* pages/package-order/package-order.wxss */

/* 页面整体样式 */
.package-order-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f2f5;
}

/* ==================== 骨架屏样式 ==================== */
.skeleton-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

.skeleton-card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  overflow: hidden;
}

.skeleton-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-line {
  height: 32rpx;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-title {
  width: 60%;
  height: 40rpx;
}

.skeleton-desc {
  width: 80%;
  height: 28rpx;
}

.skeleton-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.skeleton-tag {
  width: 120rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

/* 骨架屏呼吸动画 */
@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 内容淡入动画 */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 原有样式 ==================== */

/* 可滚动内容区域 */
.content-wrapper {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx 24rpx 0 24rpx;
}

/* 套餐列表 */
.package-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

/* 套餐卡片 */
.package-card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  gap: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  border: 3rpx solid transparent;
}

.package-card:active {
  transform: scale(0.98);
}

.package-card.selected {
  border-color: #3b82f6;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.25);
}

/* 热门角标 */
.popular-badge {
  position: absolute;
  right: -20rpx;
  top: 16rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 40rpx;
  transform: rotate(45deg);
  box-shadow: 0 4rpx 8rpx rgba(239, 68, 68, 0.3);
  z-index: 10;
}

/* 左侧流量图标容器 */
.data-thumb {
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  color: white;
  box-shadow: inset 0 0 20rpx rgba(255, 255, 255, 0.1);
}

/* 信号波纹背景 */
.signal-bg {
  position: absolute;
  width: 150%;
  height: 150%;
  background: repeating-radial-gradient(
    circle at 50% 120%,
    rgba(255, 255, 255, 0.05),
    rgba(255, 255, 255, 0.05) 20rpx,
    transparent 20rpx,
    transparent 40rpx
  );
  bottom: -50%;
  pointer-events: none;
}

.data-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-number {
  display: flex;
  align-items: baseline;
}

.data-num {
  font-size: 64rpx;
  font-weight: 900;
  line-height: 0.9;
  letter-spacing: -2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.data-unit {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.9;
  margin-left: 4rpx;
}

.data-type {
  margin-top: 12rpx;
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 颜色主题 - 绿色系 */
.data-thumb.theme-0 {
  background: linear-gradient(135deg, #34d399 0%, #14b8a6 100%);
}

.feature-tag.theme-0 {
  color: #059669;
  background: #d1fae5;
  border-color: #6ee7b7;
}

.buy-button.theme-0 {
  background: #d1fae5;
  color: #059669;
  border-color: #6ee7b7;
}

/* 颜色主题 - 蓝色系 */
.data-thumb.theme-1 {
  background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
}

.feature-tag.theme-1 {
  color: #2563eb;
  background: #dbeafe;
  border-color: #93c5fd;
}

.buy-button.theme-1 {
  background: #3b82f6;
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* 颜色主题 - 橙红色系 */
.data-thumb.theme-2 {
  background: linear-gradient(135deg, #fb923c 0%, #ef4444 100%);
}

.feature-tag.theme-2 {
  color: #ea580c;
  background: #fed7aa;
  border-color: #fdba74;
}

.buy-button.theme-2 {
  background: linear-gradient(135deg, #fb923c 0%, #ef4444 100%);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(251, 146, 60, 0.3);
}

/* 颜色主题 - 紫色系 */
.data-thumb.theme-3 {
  background: linear-gradient(135deg, #a855f7 0%, #6366f1 100%);
}

.feature-tag.theme-3 {
  color: #9333ea;
  background: #f3e8ff;
  border-color: #d8b4fe;
}

.buy-button.theme-3 {
  background: #f3e8ff;
  color: #9333ea;
  border-color: #d8b4fe;
}

/* 右侧信息区域 */
.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
  min-width: 0;
}

.info-top {
  flex: 1;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.package-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
  flex: 1;
  margin-right: 16rpx;
}

.package-price {
  display: flex;
  align-items: baseline;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #ef4444;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ef4444;
}

.package-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 特性标签 */
.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.feature-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid;
  white-space: nowrap;
}

/* 购买按钮 */
.buy-button-wrapper {
  display: flex;
  justify-content: flex-end;
}

.buy-button {
  font-size: 24rpx;
  font-weight: bold;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  border: 1rpx solid;
  transition: all 0.2s ease;
}

/* 订购区域 - 固定在底部但不使用fixed */
.order-section {
  flex-shrink: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid #e5e7eb;
}

/* 订购按钮 */
.order-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 96rpx;
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  position: relative;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

.order-button::after {
  border: none;
}

.order-button::before {
  display: none;
}

.order-button.active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
}

.order-button.disabled {
  background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  color: #9ca3af;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx dashed #d1d5db;
}

.order-button.disabled::after {
  border: none;
}

.order-button:active:not(:disabled) {
  transform: scale(0.98);
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .data-thumb {
    width: 160rpx;
    height: 160rpx;
  }
  
  .data-num {
    font-size: 52rpx;
  }
  
  .package-name {
    font-size: 28rpx;
  }
}

/* ==================== 支付方式选择弹窗 ==================== */
.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.payment-content {
  width: 100%;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.payment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.payment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.payment-close {
  font-size: 48rpx;
  color: #9ca3af;
  padding: 0 16rpx;
  line-height: 1;
}

.payment-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.payment-option {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background-color: #f9fafb;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.payment-option:active {
  background-color: #f3f4f6;
  transform: scale(0.98);
}

.option-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.option-icon .iconfont {
  font-size: 48rpx;
  color: #fff;
}

.wechat-icon {
  background: #10b981;
}

.qrcode-icon {
  background: #3b82f6;
}

.alipay-icon {
  background: #1677ff;
}

.offline-icon {
  background: #f59e0b;
}

.option-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.option-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.option-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.option-arrow {
  font-size: 48rpx;
  color: #d1d5db;
  margin-left: 16rpx;
}

/* ==================== 二维码支付弹窗 ==================== */
.qrcode-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
  padding: 48rpx;
}

.qrcode-content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: scaleIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.qrcode-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.qrcode-close {
  font-size: 48rpx;
  color: #9ca3af;
  padding: 0 16rpx;
  line-height: 1;
  cursor: pointer;
}

.qrcode-body {
  padding: 48rpx 32rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载状态 */
.qrcode-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f4f6;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 错误状态 */
.qrcode-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.error-icon {
  font-size: 96rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ef4444;
  max-width: 400rpx;
  line-height: 1.6;
}

.retry-button {
  margin-top: 16rpx;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

.retry-button::after {
  border: none;
}

/* 二维码显示 */
.qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.qrcode-wrapper {
  width: 240rpx;
  height: 240rpx;
  padding: 20rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 32rpx;
}

.qrcode-canvas {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.qrcode-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.tips-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.qrcode-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.action-button {
  flex: 1;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  border-radius: 48rpx;
  border: none;
  transition: all 0.3s ease;
}

.action-button::after {
  border: none;
}

.copy-button {
  background: #f3f4f6;
  color: #374151;
  border: 2rpx solid #e5e7eb;
}

.copy-button:active {
  background: #e5e7eb;
  transform: scale(0.98);
}
