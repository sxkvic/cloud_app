/* pages/complaint/complaint.wxss */

/* 页面整体样式 */
.complaint-page {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 投诉类型 */
.complaint-types {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.type-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.type-item:active {
  border-color: #2563eb;
  background: #f8fafc;
}

.type-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.type-description {
  font-size: 26rpx;
  color: #6b7280;
}

.type-radio {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #d1d5db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.type-radio.selected {
  border-color: #2563eb;
  background: #2563eb;
}

.radio-inner {
  width: 16rpx;
  height: 16rpx;
  background: white;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.type-radio.selected .radio-inner {
  opacity: 1;
}

/* 投诉详情 */
.complaint-details {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.info-section {
  margin-bottom: 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1f2937;
}

.info-input {
  font-size: 28rpx;
  color: #1f2937;
  text-align: right;
  padding: 8rpx 0;
  border: none;
  background: transparent;
}

/* 问题描述 */
.description-section {
  margin-bottom: 32rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.description-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #374151;
  background: #f9fafb;
  box-sizing: border-box;
  line-height: 1.5;
}

.description-input:focus {
  border-color: #2563eb;
  background: white;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 上传图片 */
.upload-section {
  margin-bottom: 32rpx;
}

.upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.upload-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.upload-btn:active {
  border-color: #2563eb;
  background: #f8fafc;
}

.upload-icon {
  font-size: 32rpx;
  color: #9ca3af;
}

.upload-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.upload-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 处理说明 */
.process-info {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.info-icon {
  font-size: 32rpx;
  margin-top: 4rpx;
}

.info-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  flex: 1;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f3f4f6;
  color: #374151;
}

.action-button.primary {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.action-button:disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.action-button:active:not(:disabled) {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .complaint-page {
    padding: 24rpx;
  }
  
  .complaint-types,
  .complaint-details,
  .process-info {
    padding: 24rpx;
  }
  
  .upload-item,
  .upload-btn {
    width: 140rpx;
    height: 140rpx;
  }
}
