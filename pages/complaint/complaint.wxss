/* pages/complaint/complaint.wxss */

/* 页面整体样式 - 运营商风格 */
.complaint-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0066CC 0%, #f5f7fa 280rpx);
  padding: 40rpx 32rpx;
  padding-bottom: 160rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 20rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 投诉表单 */
.complaint-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 102, 204, 0.08);
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.required {
  color: #FF3B30;
  font-size: 32rpx;
  margin-left: 4rpx;
}

/* Picker选择器 */
.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.picker-view:active {
  border-color: #0066CC;
  background: #ffffff;
}

.picker-text {
  font-size: 28rpx;
  color: #1a1a1a;
  flex: 1;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 36rpx;
  color: #999999;
  font-weight: bold;
  transform: rotate(-90deg);
}

/* 输入框 */
.item-input {
  width: 100%;
  padding: 24rpx 20rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.item-input:focus {
  border-color: #0066CC;
  background: #ffffff;
}

/* 文本域 */
.textarea-item {
  margin-bottom: 0;
}

.item-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.item-textarea:focus {
  border-color: #0066CC;
  background: #ffffff;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 温馨提示卡片 */
.tips-card {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF5CC 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #FFE8A3;
}

.tips-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #D97706;
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #92400E;
  line-height: 1.6;
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid #f0f0f0;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #0066CC 0%, #0052A3 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 102, 204, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 102, 204, 0.2);
}

.submit-btn.disabled {
  background: linear-gradient(135deg, #d0d0d0 0%, #b0b0b0 100%);
  color: #888888;
  box-shadow: none;
}
