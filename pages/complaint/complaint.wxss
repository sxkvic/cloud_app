/* pages/complaint/complaint.wxss */

/* 全局基础 */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
}

/* --- 1. 头部样式 --- */
.header-bg {
  /* 延续品牌蓝渐变 */
  background: linear-gradient(135deg, #4D6AFF 0%, #2B4CFF 100%);
  padding-bottom: 100rpx; /* 下方留空给卡片 */
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 30rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.icon-back { 
  width: 36rpx; 
  height: 36rpx; 
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

.header-text {
  padding: 30rpx 40rpx 0;
  text-align: center;
  color: rgba(255,255,255,0.9);
}

.h1 { 
  font-size: 30rpx; 
  letter-spacing: 2rpx; 
}

/* --- 2. 表单卡片 --- */
.form-card {
  margin: -60rpx 30rpx 0; /* 悬浮效果 */
  background: #fff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03);
  position: relative;
  z-index: 10;
}

/* 表单行样式 */
.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 100rpx;
  padding: 28rpx 0;
  position: relative;
}

.form-item-col {
  padding: 30rpx 0 40rpx;
}

.border-bottom {
  border-bottom: 1rpx solid #F5F7FA;
}

.mb-2 { 
  margin-bottom: 20rpx; 
}

/* 标签部分 */
.label-box {
  width: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink: 0;
  height: 40rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #FF4D4F;
  margin-left: 4rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}

/* 输入部分 */
.input-box {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40rpx;
}

.picker-box {
  justify-content: space-between;
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}

.placeholder {
  color: #C0C4CC;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}

.value {
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}

.icon-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
  flex-shrink: 0;
  margin-left: 12rpx;
}

/* 文本域样式 */
.textarea-wrapper {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #F0F2F5;
}

.textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #C0C4CC;
  margin-top: 10rpx;
}

/* --- 3. 底部按钮 --- */
.footer-box {
  margin-top: 60rpx;
  padding: 0 40rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  background: linear-gradient(90deg, #4D6AFF 0%, #2B4CFF 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
  border: none !important;
  box-shadow: 0 10rpx 20rpx rgba(77, 106, 255, 0.2);
  transition: all 0.3s ease;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active { 
  opacity: 0.9;
  transform: scale(0.98);
}

/* 禁用状态 */
.submit-btn.disabled {
  background: #E5E7EB !important;
  color: #9CA3AF !important;
  box-shadow: none;
}

.submit-btn.disabled::after {
  border: none;
}
