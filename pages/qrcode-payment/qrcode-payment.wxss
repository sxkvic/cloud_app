/* pages/qrcode-payment/qrcode-payment.wxss */
page {
  background: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.qrcode-payment-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 订单信息 */
.order-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(20rpx);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.info-value.amount {
  font-size: 36rpx;
  color: #ef4444;
  font-weight: bold;
}

/* 二维码区域 */
.qrcode-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(20rpx);
}

.qrcode-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-overlay {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx dashed #cbd5e1;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e2e8f0;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #64748b;
}

.qrcode-canvas {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  background: white;
}

.qrcode-tips {
  margin-top: 24rpx;
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}

/* 二维码链接区域 */
.qrcode-url-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(20rpx);
}

.url-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.url-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.copy-btn {
  padding: 12rpx 24rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 1;
}

.copy-btn:active {
  background: #5a67d8;
}

.url-content {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
}

.url-text {
  font-size: 24rpx;
  color: #475569;
  word-break: break-all;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #64748b;
}

.cancel-btn:active {
  background: rgba(255, 255, 255, 0.7);
}

.confirm-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.confirm-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(16, 185, 129, 0.4);
}

/* 支付说明 */
.payment-instructions {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
}

.instruction-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.instruction-item {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}
