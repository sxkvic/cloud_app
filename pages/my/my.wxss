/* pages/my/my.wxss */

/* 页面整体样式 */
.my-page {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.user-level {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.level-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.level-badge {
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

.user-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.action-item:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: white;
}

/* 账户信息 */
.account-info {
  margin-bottom: 32rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
}

.info-item {
  text-align: center;
  flex: 1;
}

.info-item:not(:last-child) {
  border-right: 1rpx solid #e5e7eb;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 服务菜单 */
.service-menu {
  margin-bottom: 32rpx;
}

.menu-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.menu-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.menu-item:active {
  transform: scale(0.95);
  background: #f3f4f6;
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.menu-name {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}

.menu-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 订单管理 */
.order-management {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.order-tabs {
  display: flex;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  border-color: #2563eb;
  background: #f8fafc;
  color: #2563eb;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-text {
  font-size: 26rpx;
  font-weight: 500;
}

.tab-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 我的设备 */
.my-devices {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.view-all {
  font-size: 26rpx;
  color: #2563eb;
  font-weight: 500;
}

.view-all:active {
  opacity: 0.7;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.device-item:active {
  border-color: #2563eb;
  transform: translateX(8rpx);
}

.device-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.device-status {
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.device-status.online {
  background: #d1fae5;
  color: #10b981;
}

.device-status.offline {
  background: #fee2e2;
  color: #ef4444;
}

.device-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 常用功能 */
.common-functions {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.function-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.function-item:active {
  border-color: #2563eb;
  transform: translateX(8rpx);
}

.function-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.function-info {
  flex: 1;
}

.function-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.function-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 设置选项 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.setting-item:active {
  border-color: #2563eb;
  transform: translateX(8rpx);
}

.setting-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.setting-info {
  flex: 1;
}

.setting-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.setting-arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f3f4f6;
  color: #374151;
}

.action-button.primary {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.action-button:active:not(:disabled) {
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .my-page {
    padding: 24rpx;
  }
  
  .user-header,
  .account-info,
  .service-menu,
  .order-management,
  .my-devices,
  .common-functions,
  .settings-section {
    padding: 24rpx;
  }
  
  .menu-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}


