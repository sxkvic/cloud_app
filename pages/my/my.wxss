/* pages/my/my.wxss */

/* 页面整体样式 */
.my-page {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 账户信息 */
.account-info {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-around;
}

.info-item {
  text-align: center;
  flex: 1;
}

.info-item:not(:last-child) {
  border-right: 1rpx solid #e5e7eb;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 常用服务 */
.service-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.service-grid {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx 16rpx;
}

.service-item {
  text-align: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.service-item:active {
  transform: scale(0.95);
  background: #f9fafb;
}

.service-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
}

.service-name {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}


/* 设置与帮助 */
.settings-section {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.settings-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f9fafb;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.setting-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.setting-arrow {
  font-size: 28rpx;
  color: #d1d5db;
}



