/* pages/my/my.wxss */

page {
  background-color: #F5F6F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  padding-bottom: 180rpx;
}

/* ========== 1. 顶部蓝色装饰背景 ========== */
.blue-header {
  height: 400rpx;
  background: linear-gradient(135deg, #2B7FF0 0%, #1E64D8 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 0;
}

.container {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  margin-top: 40rpx;
}

/* ========== 2. 卡片通用样式 ========== */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

/* 信息卡片 (玻璃态效果) */
.info-card {
  background: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  color: #fff;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.info-item {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  font-family: 'SF Mono', Monaco, monospace;
}

.right-align {
  text-align: right;
}

.device-tag {
  background: rgba(255, 255, 255, 0.25);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  font-family: 'SF Mono', Monaco, monospace;
}

.tag-bold {
  font-weight: bold;
  margin-right: 6rpx;
}

/* 设备号行 */
.device-no-row {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.device-no {
  font-size: 28rpx;
  font-weight: 500;
  font-family: 'SF Mono', Monaco, monospace;
}

/* ========== 3. 表单区域 ========== */
.form-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* ========== 4. 信息列表 ========== */
.info-list {
  margin-top: 24rpx;
}

.info-row-simple {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F7F8FA;
}

.info-row-simple:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* ========== 5. 菜单列表 ========== */
.menu-list {
  margin-top: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F7F8FA;
  transition: all 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F7F8FA;
  border-radius: 12rpx;
  margin: 0 -20rpx;
  padding: 24rpx 20rpx;
}

/* 分享按钮特殊样式 - 去除button默认样式 */
.share-button {
  background: transparent;
  border: none;
  padding: 24rpx 0;
  margin: 0;
  line-height: normal;
  text-align: left;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F7F8FA;
  border-radius: 0;
  transition: all 0.2s;
}

.share-button::after {
  border: none;
}

.share-button:active {
  background: #F7F8FA;
  border-radius: 12rpx;
  margin: 0 -20rpx;
  padding: 24rpx 20rpx;
}

/* 如果分享按钮是最后一项，移除底部边框 */
.menu-list .share-button:last-child {
  border-bottom: none;
}

.menu-icon {
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon .iconfont {
  font-size: 36rpx;
  color: #2B7FF0;
}

/* 针对玻璃态卡片中的图标，使用白色 */
.info-card .menu-icon .iconfont {
  color: #fff;
}

.menu-info {
  flex: 1;
}

.menu-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

.menu-arrow {
  font-size: 32rpx;
  color: #C0C4CC;
  font-weight: 300;
}

/* ========== 6. 骨架屏 ========== */
.skeleton-wrapper {
  padding: 0;
}

.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.info-card-skeleton {
  background: rgba(255, 255, 255, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.skeleton-line {
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.skeleton-title {
  width: 40%;
  height: 40rpx;
}

.skeleton-desc {
  width: 70%;
  height: 32rpx;
}

.skeleton-input {
  width: 100%;
  height: 96rpx;
  margin-bottom: 24rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.4s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 7. 设备选择弹窗 ========== */
.device-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.device-modal .modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.25s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.device-modal .modal-content {
  position: relative;
  width: 100%;
  background: #f5f6f7;
  border-radius: 32rpx 32rpx 0 0;
  padding: 0 32rpx 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease-out;
  max-height: 80vh;
  overflow-y: auto;
}

.device-modal .modal-content::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 8rpx;
  background: #ddd;
  border-radius: 4rpx;
}

.device-modal .modal-header {
  padding: 48rpx 0 24rpx;
  text-align: center;
}

.device-modal .modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.device-modal .modal-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 区域标签 */
.section-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.current-device-section {
  margin-bottom: 24rpx;
}

.other-devices-section {
  margin-bottom: 24rpx;
}

/* 设备卡片 */
.device-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 16rpx;
  transition: all 0.2s;
}

.device-card:last-child {
  margin-bottom: 0;
}

.device-card-hover {
  background: #f8f9fa;
  transform: scale(0.98);
}

.device-card.current {
  border: 2rpx solid rgba(43, 127, 240, 0.3);
  background: linear-gradient(135deg, rgba(43, 127, 240, 0.03) 0%, rgba(43, 127, 240, 0.08) 100%);
}

.device-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(43, 127, 240, 0.1) 0%, rgba(43, 127, 240, 0.15) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.device-icon-box.gray {
  background: linear-gradient(135deg, #f5f5f5 0%, #eee 100%);
}

.device-info {
  flex: 1;
  min-width: 0;
}

.device-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-code {
  font-size: 24rpx;
  color: #999;
  font-family: 'SF Mono', Consolas, monospace;
}

/* 当前设备状态 */
.device-status {
  display: flex;
  align-items: center;
  background: rgba(34, 197, 94, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #22C55E;
  font-weight: 500;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #22C55E;
  border-radius: 50%;
  margin-right: 8rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 切换箭头 */
.switch-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 绑定新设备按钮 */
.bind-new-btn {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 8rpx;
  border: 2rpx dashed rgba(43, 127, 240, 0.3);
  transition: all 0.2s;
}

.bind-new-btn-hover {
  background: rgba(43, 127, 240, 0.05);
  border-color: #2B7FF0;
}

.bind-icon-box {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(43, 127, 240, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.bind-new-btn text {
  font-size: 28rpx;
  color: #2B7FF0;
  font-weight: 500;
}

/* 取消按钮 */
.device-modal .modal-close {
  margin-top: 24rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  background: #fff;
  border-radius: 20rpx;
}

.device-modal .modal-close:active {
  background: #f5f5f5;
}

/* ========== 8. 响应式设计 ========== */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .card {
    padding: 32rpx 24rpx;
  }
}
