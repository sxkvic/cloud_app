/* 页面过渡加载动画样式 */
.page-transition {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.page-transition.show {
  opacity: 1;
  pointer-events: auto;
}

.transition-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 加载容器 */
.loading-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

/* 旋转圆环 */
.spinner-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 6rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 中心图标 */
.center-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.8;
  }
}

/* 云朵图标 - 重新设计更像云朵 */
.cloud-icon {
  position: relative;
  width: 90rpx;
  height: 60rpx;
}

/* 云朵主体 */
.cloud-top {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #60a5fa, #3b82f6);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 左上角大圆 */
.cloud-top::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #60a5fa, #3b82f6);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 右上角中圆 */
.cloud-top::after {
  content: '';
  position: absolute;
  top: -16rpx;
  right: 12rpx;
  width: 28rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #60a5fa, #3b82f6);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 中间小圆（增加层次感）*/
.cloud-bottom {
  position: absolute;
  top: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 22rpx;
  height: 22rpx;
  background: linear-gradient(135deg, #93c5fd, #60a5fa);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
}

/* 加载文字 */
.loading-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 24rpx;
  animation: fadeInOut 2s ease-in-out infinite;
}

@keyframes fadeInOut {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 加载点 */
.loading-dots {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  animation: dotBounce 1.4s ease-in-out infinite;
}

.dot-1 {
  animation-delay: 0s;
}

.dot-2 {
  animation-delay: 0.2s;
}

.dot-3 {
  animation-delay: 0.4s;
}

@keyframes dotBounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}
